{% comment %}
  âœ… Pick Your Fabric & Colour Section - FIXED
  - Main image updates when swatch clicked
  - Swatches always show when added
  - Fully responsive
  - FIXED: Swatches without images are no longer clickable
{% endcomment %}

<section class="fabric-section">
  <div class="fabric-header">
    {% if section.settings.heading_number != blank %}
      <h2 class="fabric-number">{{ section.settings.heading_number }}</h2>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h3 class="fabric-title">{{ section.settings.heading }}</h3>
    {% endif %}
    <ul class="fabric-points">
      {% if section.settings.point_1 != blank %}
        <li>{{ section.settings.point_1 }}</li>
      {% endif %}
      {% if section.settings.point_2 != blank %}
        <li>{{ section.settings.point_2 }}</li>
      {% endif %}
    </ul>
  </div>

  <div class="fabric-grid">
    {% for block in section.blocks %}
      <div class="fabric-item" data-fabric-item>
        <div class="fabric-image">
          {% if block.settings.main_image != blank %}
            <img src="{{ block.settings.main_image | img_url: '400x400' }}" alt="{{ block.settings.title | escape }}" data-fabric-main-image>
          {% else %}
            <div class="placeholder-image">No image set</div>
          {% endif %}
        </div>
        {% if block.settings.title != blank %}
          <p class="fabric-name">{{ block.settings.title }}</p>
        {% endif %}

        <div class="fabric-swatches">
          {% for i in (1..8) %}
            {% assign color_key = 'color_swatch_' | append: i %}
            {% assign image_key = 'color_image_' | append: i %}
            {% assign swatch_color = block.settings[color_key] %}
            {% assign swatch_image = block.settings[image_key] %}

            {% comment %} Show swatch if EITHER color OR image is present {% endcomment %}
            {% if swatch_color != blank or swatch_image != blank %}
              <span
                class="fabric-swatch {% if swatch_color == blank %}no-color{% endif %} {% if swatch_image != blank %}has-image{% else %}no-image{% endif %}"
                style="{% if swatch_color != blank %}background-color: {{ swatch_color }};{% endif %}"
                data-swatch-image="{% if swatch_image != blank %}{{ swatch_image | img_url: '400x400' }}{% else %}{% endif %}"
                title="Swatch {{ i }}">
                {% if swatch_color == blank and swatch_image != blank %}
                  <span class="swatch-preview">Img</span>
                {% endif %}
              </span>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="fabric-footer">
    <p class="fabric-subtitle">{{ section.settings.footer_title }}</p>
    <ul class="fabric-list">
      {% if section.settings.list_item_1 != blank %}
        <li>{{ section.settings.list_item_1 }}</li>
      {% endif %}
      {% if section.settings.list_item_2 != blank %}
        <li>{{ section.settings.list_item_2 }}</li>
      {% endif %}
      {% if section.settings.list_item_3 != blank %}
        <li>{{ section.settings.list_item_3 }}</li>
      {% endif %}
    </ul>
  </div>
</section>

<style>
.fabric-section {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px;
  color: #000;
  border-bottom: 2px solid #f5eee8;
}
.fabric-header {
  text-align: left;
  margin-bottom: 30px;
}
.fabric-number {
  font-size: 28px;
  font-weight: 600;
  color: #000;
  margin-bottom: 5px;
}
.fabric-title {
  font-size: 28px;
  font-weight: 600;
  color: #000;
  margin-bottom: 15px;
}
.fabric-points {
  list-style: disc;
  padding-left: 20px;
  margin-bottom: 30px;
}
.fabric-points li {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}
.fabric-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  margin-bottom: 40px;
}
.fabric-item {
  text-align: center;
  border: 1px solid #e5e5e5;
  background: #fff;
  transition: all 0.3s ease;
  padding-bottom: 10px;
}
.fabric-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}
.fabric-image img {
  width: 100%;
  height: auto;
  display: block;
}
.placeholder-image {
  width: 100%;
  height: 200px;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}
.fabric-name {
  font-size: 15px;
  font-weight: 500;
  color: #000;
  padding: 10px 0;
  margin: 0;
}
.fabric-swatches {
  display: flex;
  justify-content: center;
  gap: 6px;
  flex-wrap: wrap;
  padding: 0 10px;
  margin-top: 8px;
}
.fabric-swatch {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  border: 1px solid #ccc;
  cursor: pointer;
  transition: transform 0.2s ease, border 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}
.fabric-swatch.no-color {
  background: #f0f0f0;
}
.fabric-swatch.has-image:hover {
  transform: scale(1.2);
  border: 1px solid #000;
}
.fabric-swatch.has-image.active {
  border: 2px solid #000;
}
.fabric-swatch.no-image {
  cursor: default;
}
.fabric-swatch.no-image:hover {
  transform: none;
  border: 1px solid #ccc;
}
.swatch-preview {
  font-size: 8px;
  color: #666;
}
.fabric-footer {
  margin-top: 30px;
}
.fabric-subtitle {
  font-weight: 700;
  margin-bottom: 10px;
  font-size: 16px;
}
.fabric-list {
  list-style: disc;
  padding-left: 20px;
}
.fabric-list li {
  font-size: 15px;
  margin-bottom: 4px;
  color: #000;
}
@media (max-width: 992px) {
  .fabric-grid { grid-template-columns: repeat(3, 1fr); }
}
@media (max-width: 768px) {
  .fabric-grid { grid-template-columns: repeat(2, 1fr); }
}
@media (max-width: 480px) {
  .fabric-grid { grid-template-columns: 1fr; }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('[data-fabric-item]').forEach(function(item) {
    const mainImg = item.querySelector('[data-fabric-main-image]');
    const swatches = item.querySelectorAll('.fabric-swatch');

    swatches.forEach(function(swatch) {
      // Only add click event if swatch has an image
      if (swatch.classList.contains('has-image')) {
        swatch.addEventListener('click', function() {
          const newImg = swatch.getAttribute('data-swatch-image');

          // Update image and active state
          swatches.forEach(s => s.classList.remove('active'));
          swatch.classList.add('active');

          if (mainImg && newImg) {
            mainImg.src = newImg;
          }
        });
      }
    });
  });
});
</script>

