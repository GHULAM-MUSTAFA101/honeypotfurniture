  "name": "Pick Your Fabric & Colour",
  "settings": [
    { "type": "text", "id": "heading_number", "label": "Heading Number", "default": "05" },
    { "type": "text", "id": "heading", "label": "Main Heading", "default": "Pick Your Fabric & Colour" },
    { "type": "text", "id": "point_1", "label": "First Point", "default": "Explore over 30 fabric types, each with more than 30 colours." },
    { "type": "text", "id": "point_2", "label": "Second Point", "default": "Our ten curated looks make it easy to find the perfect texture and tone for your home." },
    { "type": "text", "id": "footer_title", "label": "Footer Title", "default": "Choose From Three Clear Price Categories" },
    { "type": "text", "id": "list_item_1", "label": "List Item 1", "default": "Honeypot Classics" },
    { "type": "text", "id": "list_item_2", "label": "List Item 2", "default": "Honeypot Signatures" },
    { "type": "text", "id": "list_item_3", "label": "List Item 3", "default": "Honeypot Performance" }
