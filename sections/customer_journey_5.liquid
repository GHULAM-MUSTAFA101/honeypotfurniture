{% comment %}
  Pick Your Fabric & Colour Section
  Fully customizable and responsive
{% endcomment %}

<section class="fabric-section">
  <div class="page-width">
    <div class="fabric-header">
      {% if section.settings.heading_number != blank %}
        <h2 class="fabric-number">{{ section.settings.heading_number }}</h2>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h3 class="fabric-title">{{ section.settings.heading }}</h3>
      {% endif %}
      <ul class="fabric-points">
        {% if section.settings.point_1 != blank %}
          <li>{{ section.settings.point_1 }}</li>
        {% endif %}
        {% if section.settings.point_2 != blank %}
          <li>{{ section.settings.point_2 }}</li>
        {% endif %}
      </ul>
    </div>

    <div class="fabric-grid">
      {% for block in section.blocks %}
        <div class="fabric-item">
             {% if block.settings.title != blank %}
            <p class="fabric-name">{{ block.settings.title }}</p>
          {% endif %}
          {% if block.settings.image != blank %}
            <div class="fabric-image">
              <img src="{{ block.settings.image | img_url: '400x400' }}" alt="{{ block.settings.title | escape }}">
            </div>
          {% endif %}
         
        </div>
      {% endfor %}
    </div>

    <div class="fabric-footer">
      <p class="fabric-subtitle">{{ section.settings.footer_title }}</p>
      <ul class="fabric-list">
        {% if section.settings.list_item_1 != blank %}
          <li>{{ section.settings.list_item_1 }}</li>
        {% endif %}
        {% if section.settings.list_item_2 != blank %}
          <li>{{ section.settings.list_item_2 }}</li>
        {% endif %}
        {% if section.settings.list_item_3 != blank %}
          <li>{{ section.settings.list_item_3 }}</li>
        {% endif %}
      </ul>
    </div>
  </div>
</section>

<style>
.fabric-section {
  padding: 60px 0;
  background: #fff;
  color: #000;
}

.fabric-header {
  text-align: left;
  margin-bottom: 30px;
}

.fabric-number {
  font-size: 20px;
  font-weight: 700;
  color: #000;
  margin-bottom: 5px;
}

.fabric-title {
  font-size: 28px;
  font-weight: 700;
  color: #000;
  margin-bottom: 15px;
}

.fabric-points {
  list-style: disc;
  padding-left: 20px;
  margin-bottom: 30px;
}

.fabric-points li {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}

.fabric-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 20px;
  margin-bottom: 40px;
}

.fabric-item {
  text-align: center;
  border: 1px solid #e5e5e5;
  background: #fff;
  transition: all 0.3s ease;
}

.fabric-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}

.fabric-image img {
  width: 100%;
  height: auto;
  display: block;
}

.fabric-name {
  font-size: 15px;
  font-weight: 500;
  color: #000;
  padding: 10px;
  border-top: 1px solid #e5e5e5;
  margin: 0;
}

.fabric-footer {
  margin-top: 30px;
}

.fabric-subtitle {
  font-weight: 700;
  margin-bottom: 10px;
  font-size: 16px;
}

.fabric-list {
  list-style: disc;
  padding-left: 20px;
}

.fabric-list li {
  font-size: 15px;
  margin-bottom: 4px;
  color: #000;
}

/* Responsive */
@media (max-width: 768px) {
  .fabric-title {
    font-size: 22px;
  }
  .fabric-grid {
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  }
}
</style>

{% schema %}
{
  "name": "Pick Your Fabric & Colour",
  "settings": [
    {
      "type": "text",
      "id": "heading_number",
      "label": "Heading Number",
      "default": "05"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Pick Your Fabric & Colour"
    },
    {
      "type": "text",
      "id": "point_1",
      "label": "First Point",
      "default": "Over 30 fabric types, each with more than 30 colours"
    },
    {
      "type": "text",
      "id": "point_2",
      "label": "Second Point",
      "default": "Ten curated looks make it easy to find the texture and style that fit your home"
    },
    {
      "type": "text",
      "id": "footer_title",
      "label": "Footer Title",
      "default": "Our Price Ranges are clearly grouped into five categories:"
    },
    {
      "type": "text",
      "id": "list_item_1",
      "label": "List Item 1",
      "default": "Honeypot Classics"
    },
    {
      "type": "text",
      "id": "list_item_2",
      "label": "List Item 2",
      "default": "Honeypot Signatures"
    },
    {
      "type": "text",
      "id": "list_item_3",
      "label": "List Item 3",
      "default": "Performance Select / Luxe / Elite (all with FibreGuard for stain and pet protection)"
    }
  ],
  "blocks": [
    {
      "type": "fabric",
      "name": "Fabric Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Fabric Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Fabric Name"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Pick Your Fabric & Colour",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
