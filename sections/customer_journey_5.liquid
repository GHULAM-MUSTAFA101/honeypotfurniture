  color: #171717;
  margin: 4px 0;
}
.fabric-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 25px;
  margin-bottom: 60px;
}
.fabric-item {
  text-align: center;
}
.fabric-image img {
  width: 100%;
  border-radius: 4px;
