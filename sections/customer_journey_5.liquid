<!-- Updated Shopify Section Code -->
{% comment %}
✅ Section: Pick Your Fabric & Colour (Unlimited Swatches)
- Admin can add unlimited swatches
- Dynamic swatch management
- Fully responsive
{% endcomment %}

<section class="fabric-section_main">
  <div class="fabric-section">
    <div class="fabric-header">
      <h2 class="fabric-step">{{ section.settings.heading_number }}</h2>
      <h3 class="fabric-title">{{ section.settings.heading }}</h3>
      <p class="fabric-desc">{{ section.settings.subheading_1 }}</p>
      <p class="fabric-desc">{{ section.settings.subheading_2 }}</p>
    </div>

    <div class="fabric-grid">
      {% for block in section.blocks %}
        <div class="fabric-item" data-fabric-item data-block-id="{{ block.id }}">
          <div class="fabric-image">
            {% if block.settings.main_image != blank %}
              <img src="{{ block.settings.main_image | image_url: width: 500 }}" alt="{{ block.settings.title }}" data-fabric-main-image>
            {% else %}
              <div class="placeholder-image">No image</div>
            {% endif %}
            
            <!-- Add Swatch Button -->
            <button class="add-swatch-btn" data-block-id="{{ block.id }}" title="Add New Swatch">
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M8 1V15M1 8H15" stroke="currentColor" stroke-width="2"/>
              </svg>
            </button>
          </div>
          
          <p class="fabric-name">{{ block.settings.title }}</p>

          <div class="fabric-swatches">
            <!-- Static Swatches (for backward compatibility) -->
            {% for i in (1..15) %}
              {% assign color_key = 'color_swatch_' | append: i %}
              {% assign image_key = 'color_image_' | append: i %}
              {% assign swatch_color = block.settings[color_key] %}
              {% assign swatch_image = block.settings[image_key] %}
              
              {% if swatch_color != blank or swatch_image != blank %}
                <div class="swatch-container">
                  <span
                    class="fabric-swatch {% if swatch_image != blank %}has-image{% endif %}"
                    style="{% if swatch_color != blank %}background-color: {{ swatch_color }};{% endif %}"
                    data-swatch-image="{% if swatch_image != blank %}{{ swatch_image | image_url: width: 500 }}{% endif %}"
                    data-swatch-index="{{ i }}">
                    {% if swatch_image != blank %}
                      <img src="{{ swatch_image | image_url: width: 40 }}" alt="Swatch {{ i }}" class="swatch-thumb">
                    {% endif %}
                  </span>
                  <button class="remove-swatch-btn" data-block-id="{{ block.id }}" data-swatch-index="{{ i }}">×</button>
                </div>
              {% endif %}
            {% endfor %}
            
            <!-- Dynamic Swatches -->
            {% for i in (1..50) %}
              {% assign dynamic_color_key = 'dynamic_color_' | append: i %}
              {% assign dynamic_image_key = 'dynamic_image_' | append: i %}
              {% assign dynamic_color = block.settings[dynamic_color_key] %}
              {% assign dynamic_image = block.settings[dynamic_image_key] %}
              
              {% if dynamic_color != blank or dynamic_image != blank %}
                <div class="swatch-container">
                  <span
                    class="fabric-swatch {% if dynamic_image != blank %}has-image{% endif %}"
                    style="{% if dynamic_color != blank %}background-color: {{ dynamic_color }};{% endif %}"
                    data-swatch-image="{% if dynamic_image != blank %}{{ dynamic_image | image_url: width: 500 }}{% endif %}"
                    data-swatch-index="dynamic-{{ i }}">
                    {% if dynamic_image != blank %}
                      <img src="{{ dynamic_image | image_url: width: 40 }}" alt="Dynamic Swatch {{ i }}" class="swatch-thumb">
                    {% endif %}
                  </span>
                  <button class="remove-swatch-btn" data-block-id="{{ block.id }}" data-swatch-index="dynamic-{{ i }}">×</button>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Rest of your existing code... -->
  </div>
</section>

<style>
  /* Add these new styles to your existing CSS */
  .add-swatch-btn {
    position: absolute;
    bottom: 10px;
    right: 10px;
    background: #000;
    color: white;
    border: none;
    border-radius: 50%;
    width: 36px;
    height: 36px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.3s ease;
  }
  
  .fabric-item:hover .add-swatch-btn {
    opacity: 1;
  }
  
  .add-swatch-btn:hover {
    background: #333;
    transform: scale(1.1);
  }
  
  .swatch-container {
    position: relative;
    display: inline-block;
  }
  
  .remove-swatch-btn {
    position: absolute;
    top: -5px;
    right: -5px;
    background: #ff4444;
    color: white;
    border: none;
    border-radius: 50%;
    width: 18px;
    height: 18px;
    font-size: 12px;
    cursor: pointer;
    display: none;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }
  
  .swatch-container:hover .remove-swatch-btn {
    display: flex;
  }
  
  /* Modal styles for swatch addition */
  .swatch-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 1000;
    align-items: center;
    justify-content: center;
  }
  
  .swatch-modal.active {
    display: flex;
  }
  
  .swatch-modal-content {
    background: white;
    padding: 30px;
    border-radius: 10px;
    width: 90%;
    max-width: 400px;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Add swatch functionality
  document.querySelectorAll('.add-swatch-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const blockId = this.getAttribute('data-block-id');
      openSwatchModal(blockId);
    });
  });
  
  // Remove swatch functionality
  document.querySelectorAll('.remove-swatch-btn').forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.stopPropagation();
      const blockId = this.getAttribute('data-block-id');
      const swatchIndex = this.getAttribute('data-swatch-index');
      
      if (confirm('Are you sure you want to remove this swatch?')) {
        removeSwatch(blockId, swatchIndex);
      }
    });
  });
  
  function openSwatchModal(blockId) {
    // In a real implementation, this would open a modal
    // For now, we'll simulate with a prompt
    const color = prompt('Enter color hex code (e.g., #FF0000) or leave empty for image swatch:');
    if (color !== null) {
      addNewSwatch(blockId, color);
    }
  }
  
  function addNewSwatch(blockId, color) {
    // This would typically make an AJAX call to Shopify to save the new swatch
    // For demonstration, we'll add it visually
    const fabricItem = document.querySelector(`[data-block-id="${blockId}"]`);
    const swatchesContainer = fabricItem.querySelector('.fabric-swatches');
    
    const newIndex = Date.now(); // Unique index
    const swatchContainer = document.createElement('div');
    swatchContainer.className = 'swatch-container';
    swatchContainer.innerHTML = `
      <span class="fabric-swatch" style="background-color: ${color};" data-swatch-index="new-${newIndex}"></span>
      <button class="remove-swatch-btn" data-block-id="${blockId}" data-swatch-index="new-${newIndex}">×</button>
    `;
    
    swatchesContainer.appendChild(swatchContainer);
    
    // Re-initialize swatch functionality for the new swatch
    initializeSwatchFunctionality();
  }
  
  function removeSwatch(blockId, swatchIndex) {
    // This would typically make an AJAX call to Shopify to remove the swatch
    const swatchContainer = document.querySelector(`[data-block-id="${blockId}"] .remove-swatch-btn[data-swatch-index="${swatchIndex}"]`).parentElement;
    swatchContainer.style.transform = 'scale(0)';
    swatchContainer.style.opacity = '0';
    setTimeout(() => {
      swatchContainer.remove();
    }, 300);
  }
});
</script>
