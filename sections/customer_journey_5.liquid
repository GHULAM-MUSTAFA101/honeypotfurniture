<script>
document.addEventListener('DOMContentLoaded', function() {
  // Swatch click functionality - FIXED
  function initializeSwatchFunctionality() {
    document.querySelectorAll('[data-fabric-item]').forEach(function(item) {
      const mainImg = item.querySelector('[data-fabric-main-image]');
      const swatches = item.querySelectorAll('.fabric-swatch');

      if (!swatches.length || !mainImg) return;

      // Auto-activate first swatch with image
      const firstSwatchWithImage = Array.from(swatches).find(swatch => {
        return swatch.getAttribute('data-swatch-image') && 
               swatch.getAttribute('data-swatch-image') !== '';
      });
      
      if (firstSwatchWithImage) {
        firstSwatchWithImage.classList.add('active');
        mainImg.src = firstSwatchWithImage.getAttribute('data-swatch-image');
      }

      swatches.forEach(function(swatch) {
        swatch.addEventListener('click', function() {
          const newImg = this.getAttribute('data-swatch-image');
          
          if (!newImg || newImg === '') return;

          // Remove active class from all swatches
          swatches.forEach(s => s.classList.remove('active'));
          
          // Add active class to clicked swatch
          this.classList.add('active');

          // Fade transition
          mainImg.style.opacity = '0';
          setTimeout(() => {
            mainImg.src = newImg;
            mainImg.style.opacity = '1';
          }, 200);
        });
      });
    });
  }

  // Initialize swatch functionality
  initializeSwatchFunctionality();
});
</script>

