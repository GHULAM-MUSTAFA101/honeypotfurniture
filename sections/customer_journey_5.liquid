        { "type": "text", "id": "title", "label": "Fabric Name" },
        { "type": "color", "id": "color_swatch_1", "label": "Swatch 1 Color" },
        { "type": "color", "id": "color_swatch_2", "label": "Swatch 2 Color" },
        { "type": "color", "id": "color_swatch_3", "label": "Swatch 3 Color" },
        { "type": "color", "id": "color_swatch_4", "label": "Swatch 4 Color" },
        { "type": "color", "id": "color_swatch_5", "label": "Swatch 5 Color" },
        { "type": "color", "id": "color_swatch_6", "label": "Swatch 6 Color" },
        { "type": "color", "id": "color_swatch_7", "label": "Swatch 7 Color" },
        { "type": "color", "id": "color_swatch_8", "label": "Swatch 8 Color" }
      ]
    }
  ],
  "presets": [
    { "name": "Pick Your Fabric & Colour", "category": "Custom Sections" }
  ]
}
{% endschema %}