<!-- sections/tailored-quote.liquid -->
<section class="tailored-quote-section" style="background-color: {{ section.settings.background_color }};">
  <div class="container">
    <!-- Top Content -->
    <div class="tailored-quote-header">
      <div class="section-number">
        <h2 style="color: {{ section.settings.number_color }};">{{ section.settings.number }}</h2>
      </div>
      <div class="section-heading">
        <h3 style="color: {{ section.settings.heading_color }};">{{ section.settings.heading }}</h3>
      </div>
      <div class="section-text">
        <p style="color: {{ section.settings.text_color }};">{{ section.settings.paragraph1 }}</p>
        <p style="color: {{ section.settings.text_color }};">{{ section.settings.paragraph2 }}</p>
      </div>
    </div>

    <!-- Dynamic Table -->
    <div class="quote-table-wrapper">
      <table class="quote-table">
        <thead>
          <tr>
            <th style="background-color: {{ section.settings.table_header_bg }}; color: {{ section.settings.table_header_text }};">{{ section.settings.option_header }}</th>
            {% for column in section.blocks %}
              {% if column.type == 'column' %}
                <th class="column-{{ forloop.index }}" style="background-color: {{ column.settings.column_color }}; color: {{ section.settings.table_header_text }};">{{ column.settings.column_title }}</th>
              {% endif %}
            {% endfor %}
          </tr>
        </thead>
        <tbody>
          {% for row in section.blocks %}
            {% if row.type == 'row' %}
              <tr>
                <td class="row-header" style="background-color: {{ row.settings.row_color }}; color: {{ section.settings.table_text_color }}; font-weight: bold;">{{ row.settings.row_title }}</td>
                {% for column in section.blocks %}
                  {% if column.type == 'column' %}
                    {% assign price_index = forloop.index %}
                    {% if price_index == 1 and row.settings.price_1 != blank %}
                      <td style="color: {{ section.settings.table_text_color }};">{{ row.settings.price_1 }}</td>
                    {% elsif price_index == 2 and row.settings.price_2 != blank %}
                      <td style="color: {{ section.settings.table_text_color }};">{{ row.settings.price_2 }}</td>
                    {% elsif price_index == 3 and row.settings.price_3 != blank %}
                      <td style="color: {{ section.settings.table_text_color }};">{{ row.settings.price_3 }}</td>
                    {% elsif price_index == 4 and row.settings.price_4 != blank %}
                      <td style="color: {{ section.settings.table_text_color }};">{{ row.settings.price_4 }}</td>
                    {% elsif price_index == 5 and row.settings.price_5 != blank %}
                      <td style="color: {{ section.settings.table_text_color }};">{{ row.settings.price_5 }}</td>
                    {% else %}
                      <td style="color: {{ section.settings.table_text_color }};">-</td>
                    {% endif %}
                  {% endif %}
                {% endfor %}
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</section>

<style>
.tailored-quote-section {
  padding: 60px 20px;
  max-width: 1200px;
  margin: auto;
}
.container {
  max-width: 1200px;
  margin: 0 auto;
}
.section-number h2 {
  font-size: 28px;
  font-weight: 600;
  margin-bottom: 8px;
}
.section-heading h3 {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 15px;
}
.section-text p {
  font-size: 16px;
  margin-bottom: 10px;
  line-height: 1.5;
}
.quote-table-wrapper {
  overflow-x: auto;
  margin-top: 30px;
}
.quote-table {
  width: 100%;
  border-collapse: collapse;
  text-align: center;
  font-size: 15px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}
.quote-table th,
.quote-table td {
  border: 1px solid #ddd;
  padding: 15px 12px;
}
.quote-table th {
  font-weight: 700;
}
.quote-table td:first-child {
  text-align: left;
  font-weight: 600;
}

/* Responsive */
@media (max-width: 768px) {
  .tailored-quote-section {
    padding: 40px 15px;
  }
  .quote-table th, .quote-table td {
    font-size: 13px;
    padding: 10px 8px;
  }
}
</style>

