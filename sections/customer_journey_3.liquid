<!-- sections/tailored-quote.liquid -->
<section class="tailored-quote-section">
  <div class="container">

    <!-- Top Content -->
    <div class="tailored-quote-header">
      <div class="section-number">
        <h2>{{ section.settings.number }}</h2>
      </div>
      <div class="section-heading">
        <h3>{{ section.settings.heading }}</h3>
      </div>
      <div class="section-text">
        <p>{{ section.settings.paragraph1 }}</p>
        <p>{{ section.settings.paragraph2 }}</p>
        <p>{{ section.settings.paragraph3 }}</p>
      </div>
    </div>

    <!-- Static Table -->
    <div class="quote-table-wrapper">
      <table class="quote-table">
        <thead>
          <tr>
            <th>Options</th>
            <th class="yellow">Honeypot Classics</th>
            <th class="grey">Honeypot Signatures</th>
            <th class="blue">Performance Select</th>
            <th class="orange">Performance Luxe</th>
            <th class="green">Performance Elite</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="beige">Feather Filled</td>
            <td>dh 8,900</td>
            <td>dh 10,550</td>
            <td>dh 11,750</td>
            <td>dh 12,900</td>
            <td>dh 14,950</td>
          </tr>
          <tr>
            <td class="light-yellow">Foam Filled</td>
            <td>dh 8,000</td>
            <td>dh 9,700</td>
            <td>dh 10,900</td>
            <td>dh 12,050</td>
            <td>dh 14,100</td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</section>

<style>
.tailored-quote-section {
  padding: 50px 20px;
      border-bottom: 2px solid #f5eee8;
    max-width: 1200px;
    margin: auto;
}
.container {
  max-width: 1200px;
  margin: 0 auto;
}
.section-number h2 {
  font-size: 28px;
  font-weight: 600;
  margin-bottom: 8px;
}
.section-heading h3 {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 15px;
}
.section-text p {
  font-size: 16px;
  color: #555;
  margin-bottom: 10px;
}
.quote-table-wrapper {
  overflow-x: auto;
  margin-top: 20px;
}
.quote-table {
  width: 100%;
  border-collapse: collapse;
  text-align: center;
  font-size: 15px;
}
.quote-table th,
.quote-table td {
  border: 1px solid #ddd;
  padding: 12px;
}
.quote-table th {
  font-weight: 700;
}
.quote-table td:first-child {
  font-weight: 600;
  text-align: left;
}

/* Colors */
.quote-table th.yellow { background: #fff9c4; }
.quote-table th.grey { background: #e0e0e0; }
.quote-table th.blue { background: #bbdefb; }
.quote-table th.orange { background: #ffe0b2; }
.quote-table th.green { background: #c8e6c9; }
.quote-table td.beige { background: #fbe9e7; font-weight: bold; }
.quote-table td.light-yellow { background: #fff8e1; font-weight: bold; }

/* Responsive */
@media (max-width: 768px) {
  .quote-table th, .quote-table td {
    font-size: 13px;
    padding: 8px;
  }
}
</style>

{% schema %}
{
  "name": "Customer Journey 3 ",
  "settings": [
    {
      "type": "text",
      "id": "number",
      "label": "Section Number",
      "default": "03"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get a Tailored Quote"
    },
    {
      "type": "textarea",
      "id": "paragraph1",
      "label": "Paragraph 1",
      "default": "Your style and size choices lead straight to a clear, Upfront price that covers both filling options and all five fabric categories."
    },
    {
      "type": "textarea",
      "id": "paragraph2",
      "label": "Paragraph 2",
      "default": "We provide a price for every fabric so you can see exactly which options fit your budget!"
    },
    {
      "type": "textarea",
      "id": "paragraph3",
      "label": "Paragraph 3",
      "default": "This transparency lets you explore options confidently and avoid surprises."
    }
  ],
  "presets": [
    {
      "name": "Customer Journey 3 ",
      "category": "Custom"
    }
  ]
}
{% endschema %}
