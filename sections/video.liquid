    {
      "name": "HR Separator",
      "type": "hr-separator",
      "settings": [
      
      {
        "type": "text",
        "id": "hr-separator-title",
        "label": "Title"
      },
      {
        "type": "select",
        "id": "font",
        "options": [
          {
            "value": "normal",
            "label": "t:settings_schema.global.settings.font_name.label_3"
          },
          {
            "value": "Anaktoria",
            "label": "t:settings_schema.global.settings.font_name.label"
          },
          {
            "value": "Garamond",
            "label": "t:settings_schema.global.settings.font_name.label_2"
          },
          {
            "value": "Gotham",
            "label": "t:settings_schema.global.settings.font_name.label_4"
          }
        ],
        "default": "normal",
        "label": "t:sections.main-product.blocks.color_swatch.settings.font"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
