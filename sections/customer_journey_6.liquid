{% comment %}
  Customer Journey 6 Section
  Perfectly aligned & fully responsive (matches screenshot)
{% endcomment %}

<section class="creation-delivery">
  <div class="page-width">
    <div class="creation-top">
      <div class="creation-text">
        {% if section.settings.heading_number != blank %}
          <h2 class="creation-number">{{ section.settings.heading_number }}</h2>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h3 class="creation-title">{{ section.settings.heading }}</h3>
        {% endif %}
        {% if section.settings.description != blank %}
          <p class="creation-desc">{{ section.settings.description }}</p>
        {% endif %}
      </div>

      <div class="creation-images">
        {% if section.settings.image_1 != blank %}
          <div class="creation-image">
            <img src="{{ section.settings.image_1 | img_url: '800x800' }}" alt="Creation image 1">
          </div>
        {% endif %}
        {% if section.settings.image_2 != blank %}
          <div class="creation-image">
            <img src="{{ section.settings.image_2 | img_url: '800x800' }}" alt="Creation image 2">
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="creation-bottom">
    <div class="creation-bottom-inner">
      {% if section.settings.bottom_heading != blank %}
        <h4 class="bottom-heading">{{ section.settings.bottom_heading }}</h4>
      {% endif %}
      {% if section.settings.steps_text != blank %}
        <p class="steps">{{ section.settings.steps_text }}</p>
      {% endif %}
      {% if section.settings.bottom_desc != blank %}
        <p class="bottom-desc">{{ section.settings.bottom_desc }}</p>
      {% endif %}
    </div>
  </div>
</section>

<style>
.creation-delivery {
  background: #fff;
  color: #000;
  padding: 60px 20px;
  max-width: 1200px;
  margin: 0 auto;
}

/* --- TOP SECTION --- */
.creation-top {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 40px;
  flex-wrap: wrap;
}

.creation-text {
  flex: 1 1 50%;
  max-width: 50%;
}

.creation-number {
  font-size: 20px;
  font-weight: 700;
  margin-bottom: 5px;
}

.creation-title {
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 10px;
}

.creation-desc {
  font-size: 16px;
  line-height: 1.6;
  color: #000;
}

.creation-images {
  flex: 1 1 50%;
  max-width: 50%;
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: flex-start;
}

.creation-image {
  flex: 1 1 calc(50% - 10px);
  box-sizing: border-box;
}

.creation-image img {
  width: 100%;
  height: auto;
  border: 1px solid #e5e5e5;
  display: block;
  background: #f9f9f9;
  transition: transform 0.3s ease;
}

.creation-image img:hover {
  transform: scale(1.02);
}

/* --- BOTTOM SECTION --- */
.creation-bottom {
  background: #f5eee8;
  margin-top: 60px;
  padding: 40px 20px;
  text-align: center;
}

.creation-bottom-inner {
  max-width: 700px;
  margin: 0 auto;
}

.bottom-heading {
  font-size: 20px;
  font-weight: 700;
  margin-bottom: 15px;
}

.steps {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 10px;
}

.bottom-desc {
  font-size: 16px;
  color: #000;
  line-height: 1.6;
}

/* --- RESPONSIVE --- */
@media (max-width: 991px) {
  .creation-top {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .creation-text,
  .creation-images {
    max-width: 100%;
    flex: 1 1 100%;
  }
  .creation-images {
    justify-content: center;
  }
}

@media (max-width: 768px) {
  .creation-image {
    flex: 1 1 100%;
  }
  .creation-title {
    font-size: 24px;
  }
  .steps {
    font-size: 16px;
  }
}
</style>

{% schema %}
{
  "name": "Customer Journey 6",
  "settings": [
    {
      "type": "text",
      "id": "heading_number",
      "label": "Heading Number",
      "default": "06"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Customer Journey 6"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Top Description",
      "default": "Once you’ve finalised your design and fabric choice, we craft your sofa to order and deliver it within 7–14 days."
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second Image"
    },
    {
      "type": "text",
      "id": "bottom_heading",
      "label": "Bottom Heading",
      "default": "Designing your sofa with Honeypot is simple:"
    },
    {
      "type": "text",
      "id": "steps_text",
      "label": "Steps Text",
      "default": "Style → Size → Quote → Filling → Fabric → Delivery"
    },
    {
      "type": "text",
      "id": "bottom_desc",
      "label": "Bottom Description",
      "default": "From concept to comfort, we craft a sofa that’s just as unique as you."
    }
  ],
  "presets": [
    {
      "name": "Customer Journey 6",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
