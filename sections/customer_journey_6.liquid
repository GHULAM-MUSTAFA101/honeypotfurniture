{% comment %}
  Pick Your Fabric & Colour Section
  Fully responsive and visually matched to reference
{% endcomment %}

<section class="pick-fabric-section">
  <div class="page-width">
    <div class="pick-top">
      {% if section.settings.heading_number != blank %}
        <h2 class="pick-number">{{ section.settings.heading_number }}</h2>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h3 class="pick-title">{{ section.settings.heading }}</h3>
      {% endif %}
      <ul class="pick-points">
        {% if section.settings.point_1 != blank %}
          <li>{{ section.settings.point_1 }}</li>
        {% endif %}
        {% if section.settings.point_2 != blank %}
          <li>{{ section.settings.point_2 }}</li>
        {% endif %}
      </ul>
    </div>

    <div class="pick-grid">
      {% for block in section.blocks %}
        <div class="pick-item">
          {% if block.settings.image != blank %}
            <div class="pick-image">
              <img src="{{ block.settings.image | img_url: '600x600' }}" alt="{{ block.settings.title | escape }}">
            </div>
          {% endif %}
          {% if block.settings.title != blank %}
            <div class="pick-name">{{ block.settings.title }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <div class="pick-footer">
      {% if section.settings.footer_title != blank %}
        <p class="footer-title">{{ section.settings.footer_title }}</p>
      {% endif %}
      <ul class="footer-list">
        {% if section.settings.footer_item_1 != blank %}
          <li>{{ section.settings.footer_item_1 }}</li>
        {% endif %}
        {% if section.settings.footer_item_2 != blank %}
          <li>{{ section.settings.footer_item_2 }}</li>
        {% endif %}
        {% if section.settings.footer_item_3 != blank %}
          <li>{{ section.settings.footer_item_3 }}</li>
        {% endif %}
      </ul>
    </div>
  </div>
</section>

<style>
.pick-fabric-section {
  background: #fff;
  color: #000;
  padding: 60px 20px;
  max-width: 1200px;
  margin: 0 auto;
  text-align: left;
}

.pick-top {
  margin-bottom: 40px;
}

.pick-number {
  font-size: 20px;
  font-weight: 700;
  margin-bottom: 5px;
}

.pick-title {
  font-size: 26px;
  font-weight: 700;
  margin-bottom: 15px;
}

.pick-points {
  list-style: disc;
  padding-left: 20px;
}

.pick-points li {
  font-size: 16px;
  margin-bottom: 6px;
  color: #000;
}

/* Fabric Grid */
.pick-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 20px;
  margin-bottom: 40px;
}

.pick-item {
  border: 1px solid #e5e5e5;
  background: #fff;
  text-align: center;
  transition: transform 0.3s ease;
}

.pick-item:hover {
  transform: translateY(-5px);
}

.pick-image img {
  width: 100%;
  height: auto;
  display: block;
}

.pick-name {
  font-size: 15px;
  font-weight: 500;
  color: #000;
  padding: 10px;
  border-top: 1px solid #e5e5e5;
}

/* Footer */
.pick-footer {
  margin-top: 20px;
}

.footer-title {
  font-weight: 700;
  margin-bottom: 10px;
  font-size: 16px;
}

.footer-list {
  list-style: disc;
  padding-left: 20px;
}

.footer-list li {
  font-size: 15px;
  margin-bottom: 5px;
  color: #000;
}

/* Responsive Styles */
@media (max-width: 1024px) {
  .pick-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 768px) {
  .pick-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 480px) {
  .pick-grid {
    grid-template-columns: 1fr;
  }
  .pick-title {
    font-size: 22px;
    text-align: center;
  }
  .pick-number {
    text-align: center;
  }
  .pick-points {
    text-align: left;
    padding-left: 15px;
  }
}
</style>

{% schema %}
{
  "name": "Pick Your Fabric & Colour",
  "settings": [
    {
      "type": "text",
      "id": "heading_number",
      "label": "Heading Number",
      "default": "05"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Pick Your Fabric & Colour"
    },
    {
      "type": "text",
      "id": "point_1",
      "label": "Point 1",
      "default": "Over 30 fabric types, each with more than 30 colours"
    },
    {
      "type": "text",
      "id": "point_2",
      "label": "Point 2",
      "default": "Ten curated looks make it easy to find the texture and style that fit your home"
    },
    {
      "type": "text",
      "id": "footer_title",
      "label": "Footer Title",
      "default": "Our Price Ranges are clearly grouped into five categories:"
    },
    {
      "type": "text",
      "id": "footer_item_1",
      "label": "Footer Item 1",
      "default": "Honeypot Classics"
    },
    {
      "type": "text",
      "id": "footer_item_2",
      "label": "Footer Item 2",
      "default": "Honeypot Signatures"
    },
    {
      "type": "text",
      "id": "footer_item_3",
      "label": "Footer Item 3",
      "default": "Performance Select / Luxe / Elite (all with FibreGuard for stain and pet protection)"
    }
  ],
  "blocks": [
    {
      "type": "fabric",
      "name": "Fabric Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Fabric Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Fabric Name"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Pick Your Fabric & Colour",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
