<section class="contact-us-section spacing color-{{ section.settings.color_scheme }}">
  <div class="{{ section.settings.section_width }} m-auto" {% if section.settings.section_width == 'customized-width' %}style="--page-width: {{ section.settings.customize_width }}px;"{% endif %}>
    {% if section.settings.heading != blank %}
      <div class="p-w__header center m-b-4">
        <h2 class="p-w__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="p-w__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="contact-us-grid d-flex f-wrap a-i-start j-c-between" style="--grid-gap: 3rem;">
      <!-- LEFT SIDE -->
      <div class="contact-info" style="flex: 1; min-width: 300px;">
        <h3 class="contact-info-heading">{{ section.settings.info_heading }}</h3>
        <p class="contact-info-text">{{ section.settings.info_text }}</p>

        <ul class="contact-list">
          {% if section.settings.email != blank %}
            <li>
              <img src="{{ section.settings.email_icon | image_url: width: 24 }}" alt="Email icon" class="icon">
              <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
            </li>
          {% endif %}

          {% if section.settings.phone != blank %}
            <li>
              <img src="{{ section.settings.phone_icon | image_url: width: 24 }}" alt="Phone icon" class="icon">
              <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
            </li>
          {% endif %}

          {% if section.settings.timing != blank %}
            <li>
              <img src="{{ section.settings.clock_icon | image_url: width: 24 }}" alt="Clock icon" class="icon">
              {{ section.settings.timing }}
            </li>
          {% endif %}
        </ul>

        <div class="social-icons d-flex g-gap-3 m-t-4">
          {% for block in section.blocks %}
            {% if block.type == 'social_icon' %}
              <a href="{{ block.settings.icon_link }}" target="_blank">
                <img src="{{ block.settings.icon | image_url: width: 24 }}" alt="Social Icon" class="social-icon">
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- RIGHT SIDE -->
      <div class="contact-form" style="flex: 1; min-width: 300px;">
        {%- form 'contact', id: 'ContactForm', class: 'contact-form-wrapper' -%}
          {% if form.posted_successfully? %}
            <p class="form-status success">Thank you for contacting us. We will get back to you shortly.</p>
          {% elsif form.errors %}
            <p class="form-status error">Please correct the errors and try again.</p>
          {% endif %}

          <div class="form-group">
            <input type="text" id="ContactForm-name" name="contact[name]" placeholder="Your name*" required>
          </div>
          <div class="form-group">
            <input type="email" id="ContactForm-email" name="contact[email]" placeholder="Email*" required>
          </div>
          <div class="form-group">
            <input type="tel" id="ContactForm-phone" name="contact[Phone]" placeholder="Phone Number">
          </div>
          <div class="form-group">
            <input type="text" id="ContactForm-city" name="contact[City]" placeholder="City">
          </div>
          <div class="form-group">
            <textarea id="ContactForm-message" name="contact[body]" rows="5" placeholder="Your Message"></textarea>
          </div>
          <button type="submit" class="button button--primary">{{ section.settings.button_label }}</button>
        {%- endform -%}
      </div>
    </div>

    <!-- MAP SECTION -->
    {% if section.settings.map_embed != blank %}
      <div class="contact-map m-t-8">
        {{ section.settings.map_embed }}
      </div>
    {% endif %}
  </div>
</section>

<style>
.contact-us-grid {
  display: flex;
  flex-wrap: wrap;
  gap: var(--grid-gap);
}
.contact-list {
  list-style: none;
  padding: 0;
  margin-top: 1rem;
}
.contact-list li {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 0.75rem;
}
.contact-list .icon {
  width: 24px;
  height: 24px;
}
.social-icons .social-icon {
  width: 28px;
  height: 28px;
  transition: transform 0.3s ease;
}
.social-icons .social-icon:hover {
  transform: scale(1.1);
}
.contact-form-wrapper input,
.contact-form-wrapper textarea {
  width: 100%;
  padding: 0.75rem;
  margin-bottom: 1rem;
  border: 1px solid #ccc;
  border-radius: 5px;
}
.contact-form-wrapper button {
  background: #000;
  color: #fff;
  padding: 0.75rem 2rem;
  border: none;
  cursor: pointer;
  border-radius: 4px;
}
.contact-form-wrapper button:hover {
  opacity: 0.9;
}
.contact-map iframe {
  width: 100%;
  height: 350px;
  border: 0;
}
</style>

{% schema %}
{
  "name": "Custom Contact Us",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Contact Us" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Thank you for getting in touch! Kindly fill the form, have a great day!" },
    { "type": "text", "id": "info_heading", "label": "Info Heading", "default": "Get in touch with us" },
    { "type": "textarea", "id": "info_text", "label": "Info Text", "default": "Our friendly team are available online, in store or over the phone to help with any questions you may have." },
    { "type": "image_picker", "id": "email_icon", "label": "Email Icon" },
    { "type": "text", "id": "email", "label": "Email", "default": "hello@honeyspotfurniture.ae" },
    { "type": "image_picker", "id": "phone_icon", "label": "Phone Icon" },
    { "type": "text", "id": "phone", "label": "Phone", "default": "+971 123 456 789" },
    { "type": "image_picker", "id": "clock_icon", "label": "Clock Icon" },
    { "type": "textarea", "id": "timing", "label": "Opening Hours", "default": "Monday to Friday: 8am - 5pm<br>Saturday: 10am - 3pm" },
{
  "type": "textarea",
  "id": "map_embed",
  "label": "Map Embed",
  "default": "<iframe src='https://www.google.com/maps/embed?...' width='100%' height='300' style='border:0;' allowfullscreen='' loading='lazy'></iframe'>"
},    { "type": "text", "id": "button_label", "label": "Button Label", "default": "Submit" },
    {
      "type": "select",
      "id": "section_width",
      "options": [
        { "value": "full-width", "label": "Full width" },
        { "value": "page-width", "label": "Page width" },
        { "value": "customized-width", "label": "Customized width" }
      ],
      "default": "customized-width",
      "label": "Section Width"
    },
    {
      "type": "range",
      "id": "customize_width",
      "min": 1000,
      "max": 1800,
      "step": 50,
      "unit": "px",
      "label": "Custom width",
      "default": 1400
    },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color Scheme", "default": "background-1" }
  ],
  "blocks": [
    {
      "type": "social_icon",
      "name": "Social Icon",
      "settings": [
        { "type": "image_picker", "id": "icon", "label": "Social Icon" },
        { "type": "url", "id": "icon_link", "label": "Social Icon Link" }
      ]
    }
  ],
  "presets": [
    { "name": "Contact Us - Custom" }
  ]
}
{% endschema %}
