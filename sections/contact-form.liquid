{% comment %}
  Contact With Map Section
  - Left: Info Content
  - Right: Form
  - Bottom: Map
{% endcomment %}

<section class="contact-map-section">
  <div class="page-width contact-map-container">
    <div class="contact-map-wrapper">
      
      <!-- LEFT SIDE - INFO -->
      <div class="contact-map-info">
        {% if section.settings.info_heading != blank %}
          <h2 class="contact-map-heading">{{ section.settings.info_heading }}</h2>
        {% endif %}

        {% if section.settings.info_text != blank %}
          <div class="contact-map-text">
            {{ section.settings.info_text }}
          </div>
        {% endif %}

        <ul class="contact-map-info-list">
          {% for block in section.blocks %}
            {% if block.type == 'info_item' %}
              <li class="contact-map-info-item">
                {% if block.settings.icon != blank %}
                  <img src="{{ block.settings.icon | img_url: '50x50' }}" alt="icon" class="contact-map-info-icon">
                {% endif %}
                <div>
                  <h4>{{ block.settings.title }}</h4>
                  <p>{{ block.settings.text }}</p>
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>

        <!-- SOCIAL ICONS -->
        <div class="contact-map-social-icons">
          {% for block in section.blocks %}
            {% if block.type == 'social_item' %}
              <a href="{{ block.settings.link }}" target="_blank" class="contact-map-social-link">
                <img src="{{ block.settings.icon | img_url: '50x50' }}" alt="social icon" class="contact-map-social-icon">
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- RIGHT SIDE - FORM -->
      <div class="contact-map-form-wrapper">
        <form id="customContactForm" class="contact-map-form">
          <div class="contact-map-form-row">
            <input type="text" name="name" placeholder="Name" required>
            <input type="email" name="email" placeholder="Email" required>
          </div>
          <div class="contact-map-form-row">
            <input type="text" name="phone" placeholder="Phone Number" required>
            <input type="text" name="city" placeholder="City" required>
          </div>
          <div class="contact-map-form-row">
            <textarea name="message" placeholder="Message" required></textarea>
          </div>
          <button type="submit" class="contact-map-btn">Send Message</button>
        </form>
      </div>
    </div>

    <!-- MAP SECTION -->
    {% if section.settings.map_embed != blank %}
      <div class="contact-map-container-iframe">
        {{ section.settings.map_embed | raw }}
      </div>
    {% endif %}
  </div>

  <!-- TOASTER -->
  <div id="toast" class="contact-map-toast">Message sent successfully! ✅</div>
</section>

<style>
.contact-map-section {
  padding: 60px 0;
}

.contact-map-container {
  max-width: 1200px;
  margin: 0 auto;
}

.contact-map-wrapper {
  display: flex;
  flex-wrap: wrap;
  gap: 40px;
}

/* LEFT INFO */
.contact-map-info {
  flex: 1;
}

.contact-map-heading {
  font-size: 28px;
  font-weight: 600;
  margin-bottom: 10px;
}

.contact-map-text {
  margin-bottom: 20px;
}

.contact-map-info-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 17px;
}

.contact-map-info-item {
  display: flex;
  align-items: center;
  gap: 15px;
  margin-bottom: 15px;
}

.contact-map-info-icon {
  width: 40px;
  height: 40px;
}

/* SOCIAL ICONS */
.contact-map-social-icons {
  margin-top: 20px;
}

.contact-map-social-link {
  display: inline-block;
  margin-right: 10px;
}

.contact-map-social-icon {
  width: 35px;
  height: 35px;
  transition: transform 0.3s ease;
}

.contact-map-social-icon:hover {
  transform: scale(1.1);
}
.contact-map-form{
    background: white;
    padding: 30px;
    border-radius: 10px;
}

/* RIGHT FORM */
.contact-map-form-wrapper {
  flex: 1;
  background-color: #F0E9E3;
  padding: 30px;
  border-radius: 10px;
}

.contact-map-form-row {
  display: flex;
  gap: 15px;
  margin-bottom: 15px;
}

.contact-map-form-row input,
.contact-map-form-row textarea {
  flex: 1;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 14px;
}

.contact-map-form-row textarea {
  height: 120px;
  resize: none;
}

.contact-map-btn {
  background: black;
  color: white;
  padding: 12px 25px;
  border: none;
  border-radius: 6px;
  font-size: 16px;
  cursor: pointer;
  transition: background 0.3s ease;
}

.contact-map-btn:hover {
  background: #333;
}

/* MAP */
.contact-map-container-iframe iframe {
  width: 100%;
  height: 350px;
  border: 0;
  margin-top: 40px;
  border-radius: 10px;
}

/* TOAST */
.contact-map-toast {
  position: fixed;
  bottom: 20px;
  right: 20px;
  background: black;
  color: white;
  padding: 15px 25px;
  border-radius: 6px;
  display: none;
  opacity: 0;
  transition: opacity 0.4s ease;
  z-index: 999;
}
.contact-map-info-list h4{
    color: #CEAD8E;
    font-weight: 600;
    margin:0px
}
.contact-map-info-list p{
  margin:0px
}
.contact-map-toast.show {
  display: block;
  opacity: 1;
}

/* RESPONSIVE */
@media(max-width: 768px) {
  .contact-map-wrapper {
    flex-direction: column;
  }
  .contact-map-form-row {
    flex-direction: column;
  }
}
</style>

<script>
document.getElementById('customContactForm').addEventListener('submit', function(e){
  e.preventDefault();
  const toast = document.getElementById('toast');
  toast.classList.add('show');
  setTimeout(() => {
    toast.classList.remove('show');
  }, 3000);
  this.reset();
});
</script>

{% schema %}
{
  "name": "Contact With Map",
  "settings": [
    {
      "type": "text",
      "id": "info_heading",
      "label": "Info Heading",
      "default": "Get in Touch"
    },
    {
      "type": "richtext",
      "id": "info_text",
      "label": "Info Text",
      "default": "<p>We’d love to hear from you! Contact us through any of the following ways.</p>"
    },
    {
      "type": "textarea",
      "id": "map_embed",
      "label": "Google Map Embed"
    }
  ],
  "blocks": [
    {
      "type": "info_item",
      "name": "Info Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "social_item",
      "name": "Social Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Social Icon"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Social Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact With Map",
      "category": "Contact"
    }
  ]
}
{% endschema %}
