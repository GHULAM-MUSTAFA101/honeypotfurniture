<section class="contact-map-section">
  <div class="contact-container">
    <!-- Left Info Section -->
    <div class="contact-info">
      <h2 class="contact-title">{{ section.settings.heading }}</h2>
      <p class="contact-description">{{ section.settings.description }}</p>

      {% if section.settings.email_icon != blank or section.settings.email != blank %}
      <div class="contact-item">
        {% if section.settings.email_icon != blank %}
        <div class="icon-wrapper">
          <img src="{{ section.settings.email_icon | image_url }}" alt="Email Icon">
        </div>
        {% endif %}
        <div class="item-content">
          <span class="label">Email</span>
          <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
        </div>
      </div>
      {% endif %}

      {% if section.settings.phone_icon != blank or section.settings.phone != blank %}
      <div class="contact-item">
        {% if section.settings.phone_icon != blank %}
        <div class="icon-wrapper">
          <img src="{{ section.settings.phone_icon | image_url }}" alt="Phone Icon">
        </div>
        {% endif %}
        <div class="item-content">
          <span class="label">Call Us</span>
          <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
        </div>
      </div>
      {% endif %}

      {% if section.settings.timing_icon != blank or section.settings.timing != blank %}
      <div class="contact-item">
        {% if section.settings.timing_icon != blank %}
        <div class="icon-wrapper">
          <img src="{{ section.settings.timing_icon | image_url }}" alt="Clock Icon">
        </div>
        {% endif %}
        <div class="item-content">
          <span class="label">{{ section.settings.timing }}</span>
          <span>{{ section.settings.weekend }}</span>
        </div>
      </div>
      {% endif %}

      <div class="social-icons">
        {% if section.settings.facebook_icon != blank and section.settings.facebook != blank %}
        <a href="{{ section.settings.facebook }}" target="_blank" class="social-icon">
          <img src="{{ section.settings.facebook_icon | image_url }}" alt="Facebook">
        </a>
        {% endif %}
        {% if section.settings.instagram_icon != blank and section.settings.instagram != blank %}
        <a href="{{ section.settings.instagram }}" target="_blank" class="social-icon">
          <img src="{{ section.settings.instagram_icon | image_url }}" alt="Instagram">
        </a>
        {% endif %}
        {% if section.settings.youtube_icon != blank and section.settings.youtube != blank %}
        <a href="{{ section.settings.youtube }}" target="_blank" class="social-icon">
          <img src="{{ section.settings.youtube_icon | image_url }}" alt="YouTube">
        </a>
        {% endif %}
        {% if section.settings.whatsapp_icon != blank and section.settings.whatsapp != blank %}
        <a href="{{ section.settings.whatsapp }}" target="_blank" class="social-icon">
          <img src="{{ section.settings.whatsapp_icon | image_url }}" alt="WhatsApp">
        </a>
        {% endif %}
      </div>
    </div>

    <!-- Right Form Section -->
    <div class="contact-form">
      <div class="form-wrapper">
        <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="contact-form-block">
          <div class="form-row">
            <input type="text" name="contact[name]" placeholder="Your name*" required>
            <input type="email" name="contact[email]" placeholder="Email*" required>
          </div>
          <div class="form-row">
            <input type="text" name="contact[phone]" placeholder="Phone Number*" required>
            <input type="text" name="contact[city]" placeholder="City*" required>
          </div>
          <div class="form-row">
            <textarea name="contact[body]" placeholder="Your Message" rows="4"></textarea>
          </div>
          <button type="submit" class="submit-btn">SUBMIT</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Map Section -->
  {% if section.settings.map_embed != blank %}
  <div class="map-container">
    {{ section.settings.map_embed | raw }}
  </div>
  {% endif %}
</section>

<style>
.contact-map-section {
  padding: 60px 0;
}
.contact-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 40px;
}
.contact-info {
  flex: 1;
  min-width: 300px;
}
.contact-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 10px;
}
.contact-description {
  font-size: 14px;
  color: #555;
  margin-bottom: 20px;
}
.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}
.icon-wrapper {
  background: #f9f5f1;
  border-radius: 50%;
  width: 36px;
  height: 36px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10px;
}
.icon-wrapper img {
  max-width: 18px;
  max-height: 18px;
}
.item-content .label {
  color: #b18659;
  font-size: 13px;
  font-weight: 600;
}
.item-content a, .item-content span {
  display: block;
  font-size: 14px;
  color: #000;
  text-decoration: none;
}
.social-icons {
  display: flex;
  gap: 12px;
  margin-top: 20px;
}
.social-icon {
  width: 34px;
  height: 34px;
  background: #f9f5f1;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  transition: 0.3s;
}
.social-icon img {
  max-width: 18px;
  max-height: 18px;
}
.social-icon:hover {
  background: #b18659;
}
.contact-form {
  flex: 1;
  min-width: 300px;
}
.form-wrapper {
  background: #f9f5f1;
  padding: 30px;
  border-radius: 10px;
}
.form-row {
  display: flex;
  gap: 15px;
  margin-bottom: 15px;
}
.form-row input,
.form-row textarea {
  width: 100%;
  padding: 12px;
  border: none;
  background: #f5f5f5;
  border-radius: 6px;
  font-size: 14px;
}
.submit-btn {
  background: transparent;
  border: 1px solid #b18659;
  color: #b18659;
  padding: 10px 30px;
  cursor: pointer;
  transition: 0.3s;
  font-size: 14px;
  letter-spacing: 1px;
}
.submit-btn:hover {
  background: #b18659;
  color: #fff;
}
.map-container {
  margin-top: 40px;
  overflow: hidden;
  border-radius: 10px;
}
.map-container iframe {
  width: 100%;
  height: 400px;
  border: 0;
}
@media (max-width: 768px) {
  .contact-container {
    flex-direction: column;
  }
  .form-row {
    flex-direction: column;
  }
}
</style>

{% schema %}
{
  "name": "Contact Section ",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get in touch with us"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Our friendly team are available online, in store or over the phone to help with any questions you may have."
    },

    { "type": "image_picker", "id": "email_icon", "label": "Email Icon" },
    { "type": "text", "id": "email", "label": "Email", "default": "Hello@honeypotfurniture.ae" },

    { "type": "image_picker", "id": "phone_icon", "label": "Phone Icon" },
    { "type": "text", "id": "phone", "label": "Phone Number", "default": "(00) 112 365 489" },

    { "type": "image_picker", "id": "timing_icon", "label": "Timing Icon" },
    { "type": "text", "id": "timing", "label": "Timing", "default": "Monday to Friday: 9am - 5pm" },
    { "type": "text", "id": "weekend", "label": "Weekend", "default": "Saturday: 10am - 3pm" },

    { "type": "textarea", "id": "map_embed", "label": "Google Map Embed Code" },

    { "type": "image_picker", "id": "facebook_icon", "label": "Facebook Icon" },
    { "type": "url", "id": "facebook", "label": "Facebook URL" },

    { "type": "image_picker", "id": "instagram_icon", "label": "Instagram Icon" },
    { "type": "url", "id": "instagram", "label": "Instagram URL" },

    { "type": "image_picker", "id": "youtube_icon", "label": "YouTube Icon" },
    { "type": "url", "id": "youtube", "label": "YouTube URL" },

    { "type": "image_picker", "id": "whatsapp_icon", "label": "WhatsApp Icon" },
    { "type": "url", "id": "whatsapp", "label": "WhatsApp URL" }
  ],
  "presets": [
    {
      "name": "Contact Section "
    }
  ]
}
{% endschema %}
