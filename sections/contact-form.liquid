{% comment %}
  üìç Contact Info (Left) + Contact Form (Right) + Map (Bottom)
{% endcomment %}

<section class="contact-section">
  <div class="container">
    <div class="contact-top">
      <!-- LEFT: Information -->
      <div class="contact-info">
        {% if section.settings.info_heading != blank %}
          <h2 class="info-heading">{{ section.settings.info_heading }}</h2>
        {% endif %}

        <ul class="info-list">
          {% if section.settings.address != blank %}
            <li>
              <span class="info-icon">üìç</span>
              <span>{{ section.settings.address }}</span>
            </li>
          {% endif %}
          {% if section.settings.email != blank %}
            <li>
              <span class="info-icon">‚úâÔ∏è</span>
              <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
            </li>
          {% endif %}
          {% if section.settings.phone != blank %}
            <li>
              <span class="info-icon">üìû</span>
              <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
            </li>
          {% endif %}
        </ul>

        <!-- Social Icons -->
        <div class="social-icons">
          {% if section.settings.facebook_link != blank %}
            <a href="{{ section.settings.facebook_link }}" target="_blank" aria-label="Facebook">
              <i class="fa-brands fa-facebook-f"></i>
            </a>
          {% endif %}
          {% if section.settings.instagram_link != blank %}
            <a href="{{ section.settings.instagram_link }}" target="_blank" aria-label="Instagram">
              <i class="fa-brands fa-instagram"></i>
            </a>
          {% endif %}
          {% if section.settings.whatsapp_link != blank %}
            <a href="{{ section.settings.whatsapp_link }}" target="_blank" aria-label="WhatsApp">
              <i class="fa-brands fa-whatsapp"></i>
            </a>
          {% endif %}
        </div>
      </div>

      <!-- RIGHT: Contact Form -->
      <div class="contact-form">
        <h3>{{ section.settings.form_heading }}</h3>
        <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="contact-form-box">
          <input type="hidden" name="form_type" value="contact">
          <input type="hidden" name="utf8" value="‚úì">

          <!-- Row 1: Name + Email -->
          <div class="form-row">
            <div class="form-group half">
              <input type="text" name="contact[name]" placeholder="Your Name" required>
            </div>
            <div class="form-group half">
              <input type="email" name="contact[email]" placeholder="Your Email" required>
            </div>
          </div>

          <!-- Row 2: Phone + City -->
          <div class="form-row">
            <div class="form-group half">
              <input type="tel" name="contact[phone]" placeholder="Phone Number" required>
            </div>
            <div class="form-group half">
              <input type="text" name="contact[city]" placeholder="City" required>
            </div>
          </div>

          <!-- Row 3: Message -->
          <div class="form-group">
            <textarea name="contact[body]" placeholder="Your Message" rows="4" required></textarea>
          </div>

          <button type="submit" class="submit-btn">{{ section.settings.button_label }}</button>
        </form>
      </div>
    </div>

    <!-- MAP SECTION -->
    {% if section.settings.map_embed != blank %}
      <div class="contact-map">
        {{ section.settings.map_embed | raw }}
      </div>
    {% endif %}
  </div>
</section>

<style>
.contact-section {
  padding: 60px 0;
  background-color: #f9f9f9;
  font-family: Arial, sans-serif;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

.contact-top {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  margin-bottom: 40px;
}

.info-heading {
  font-size: 2rem;
  font-weight: 700;
  color: #000;
  margin-bottom: 25px;
}

.info-list {
  list-style: none;
  padding: 0;
  margin: 0 0 20px;
}

.info-list li {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
  font-size: 15px;
  color: #333;
}

.info-icon {
  color: #e8c56b;
  font-size: 20px;
  margin-right: 10px;
}

.info-list a {
  color: #333;
  text-decoration: none;
}

.social-icons a {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 38px;
  height: 38px;
  background-color: #e8c56b;
  color: #fff;
  border-radius: 50%;
  margin-right: 10px;
  font-size: 16px;
  transition: all 0.3s ease;
}

.social-icons a:hover {
  background-color: #000;
  color: #e8c56b;
}

.contact-form h3 {
  font-size: 1.5rem;
  margin-bottom: 20px;
  font-weight: 600;
}

.contact-form-box {
  width: 100%;
}

.form-row {
  display: flex;
  gap: 15px;
}

.form-group {
  margin-bottom: 15px;
}

.form-group.half {
  flex: 1;
}

.contact-form-box input,
.contact-form-box textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 14px;
}

.contact-form-box input:focus,
.contact-form-box textarea:focus {
  border-color: #e8c56b;
  outline: none;
}

.submit-btn {
  background-color: #e8c56b;
  color: #000;
  padding: 14px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-weight: 600;
  font-size: 16px;
  width: 100%;
  transition: all 0.3s;
}

.submit-btn:hover {
  background-color: #000;
  color: #e8c56b;
}

.contact-map iframe {
  width: 100%;
  height: 400px;
  border: 0;
  border-radius: 8px;
}

@media (max-width: 992px) {
  .contact-top {
    grid-template-columns: 1fr;
  }
  .form-row {
    flex-direction: column;
  }
  .info-list li {
    justify-content: center;
  }
  .contact-info, .contact-form {
    text-align: center;
  }
  .social-icons {
    justify-content: center;
  }
}
</style>

