{% comment %}
  üìç Contact + Info + Map Section
{% endcomment %}

<section class="contact-map-info">
  <div class="container">
    <div class="contact-wrapper">
      <!-- LEFT: Information -->
      <div class="contact-info">
        {% if section.settings.info_heading != blank %}
          <h2 class="info-heading">{{ section.settings.info_heading }}</h2>
        {% endif %}

        {% if section.settings.info_subheading != blank %}
          <p class="info-subheading">{{ section.settings.info_subheading }}</p>
        {% endif %}

        <ul class="info-list">
          {% if section.settings.address != blank %}
            <li><strong>Address:</strong> {{ section.settings.address }}</li>
          {% endif %}
          {% if section.settings.email != blank %}
            <li><strong>Email:</strong> <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a></li>
          {% endif %}
          {% if section.settings.phone != blank %}
            <li><strong>Phone:</strong> <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a></li>
          {% endif %}
        </ul>
      </div>

      <!-- MIDDLE: Contact Form -->
      <div class="contact-form">
        <h3>{{ section.settings.form_heading }}</h3>
        <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="contact-form-box">
          <input type="hidden" name="form_type" value="contact">
          <input type="hidden" name="utf8" value="‚úì">
          <div class="form-group">
            <input type="text" name="contact[name]" placeholder="Your Name" required>
          </div>
          <div class="form-group">
            <input type="email" name="contact[email]" placeholder="Your Email" required>
          </div>
          <div class="form-group">
            <textarea name="contact[body]" placeholder="Your Message" rows="4" required></textarea>
          </div>
          <button type="submit" class="submit-btn">{{ section.settings.button_label }}</button>
        </form>
      </div>

      <!-- RIGHT: Google Map -->
      <div class="contact-map">
        {% if section.settings.map_embed != blank %}
          {{ section.settings.map_embed | raw }}
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
.contact-map-info {
  padding: 50px 0;
  background-color: #f9f9f9;
}

.contact-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 30px;
}

.contact-info {
  text-align: left;
}

.info-heading {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 10px;
}

.info-subheading {
  color: #555;
  margin-bottom: 20px;
}

.info-list {
  list-style: none;
  padding: 0;
}

.info-list li {
  margin-bottom: 10px;
  color: #333;
}

.info-list a {
  color: inherit;
  text-decoration: none;
}

.contact-form h3 {
  font-size: 1.5rem;
  margin-bottom: 20px;
}

.contact-form-box .form-group {
  margin-bottom: 15px;
}

.contact-form-box input,
.contact-form-box textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 14px;
}

.submit-btn {
  background-color: #000;
  color: #fff;
  padding: 12px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background 0.3s;
}

.submit-btn:hover {
  background-color: #444;
}

.contact-map iframe {
  width: 100%;
  height: 100%;
  min-height: 300px;
  border: 0;
  border-radius: 8px;
}

@media (max-width: 992px) {
  .contact-wrapper {
    grid-template-columns: 1fr;
  }
  .contact-info, .contact-form, .contact-map {
    text-align: center;
  }
}
</style>

{% schema %}
{
  "name": "Contact + Info + Map",
  "settings": [
    {
      "type": "text",
      "id": "info_heading",
      "label": "Info Heading",
      "default": "Get in Touch"
    },
    {
      "type": "text",
      "id": "info_subheading",
      "label": "Info Subheading",
      "default": "We‚Äôd love to hear from you. Reach us using the details below."
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "123 Main Street, Dubai, UAE"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "info@example.com"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "+971 50 123 4567"
    },
    {
      "type": "text",
      "id": "form_heading",
      "label": "Form Heading",
      "default": "Send Us a Message"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Submit"
    },
    {
      "type": "textarea",
      "id": "map_embed",
      "label": "Google Map Embed Code",
      "default": "<iframe src='https://www.google.com/maps/embed?pb=YOUR_MAP_CODE' width='100%' height='300' style='border:0;' allowfullscreen='' loading='lazy'></iframe>"
    }
  ],
  "presets": [
    {
      "name": "Contact + Info + Map"
    }
  ]
}
{% endschema %}
