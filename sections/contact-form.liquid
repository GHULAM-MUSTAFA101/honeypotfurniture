{% comment %}
  Contact Section with Info, Form and Map
{% endcomment %}

<section class="contact-map-section">
  <div class="contact-container">
    <!-- Left Info Section -->
    <div class="contact-info">
      <h2 class="contact-title">{{ section.settings.heading }}</h2>
      <p class="contact-description">{{ section.settings.description }}</p>

      <div class="contact-item">
        <div class="icon-wrapper">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="#b18659" stroke-width="2" viewBox="0 0 24 24"><path d="M4 4h16v16H4z"/><path d="m22 6-10 7L2 6"/></svg>
        </div>
        <div class="item-content">
          <span class="label">Email</span>
          <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
        </div>
      </div>

      <div class="contact-item">
        <div class="icon-wrapper">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="#b18659" stroke-width="2" viewBox="0 0 24 24"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07A19.5 19.5 0 0 1 3.15 8.81 19.79 19.79 0 0 1 0 0a2 2 0 0 1 2-2h3a2 2 0 0 1 2 1.72 12.44 12.44 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L5.91 7.09a16 16 0 0 0 7 7l1.46-1.46a2 2 0 0 1 2.11-.45 12.44 12.44 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
        </div>
        <div class="item-content">
          <span class="label">Call Us</span>
          <a href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
        </div>
      </div>

      <div class="contact-item">
        <div class="icon-wrapper">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="#b18659" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
        </div>
        <div class="item-content">
          <span class="label">{{ section.settings.timing }}</span>
          <span>{{ section.settings.weekend }}</span>
        </div>
      </div>

      <div class="social-icons">
        {% if section.settings.facebook != blank %}
          <a href="{{ section.settings.facebook }}" target="_blank" class="social-icon">
            <i class="fa fa-facebook"></i>
          </a>
        {% endif %}
        {% if section.settings.instagram != blank %}
          <a href="{{ section.settings.instagram }}" target="_blank" class="social-icon">
            <i class="fa fa-instagram"></i>
          </a>
        {% endif %}
        {% if section.settings.youtube != blank %}
          <a href="{{ section.settings.youtube }}" target="_blank" class="social-icon">
            <i class="fa fa-youtube"></i>
          </a>
        {% endif %}
        {% if section.settings.whatsapp != blank %}
          <a href="{{ section.settings.whatsapp }}" target="_blank" class="social-icon">
            <i class="fa fa-whatsapp"></i>
          </a>
        {% endif %}
      </div>
    </div>

    <!-- Right Form Section -->
    <div class="contact-form">
      <div class="form-wrapper">
        <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="contact-form-block">
          <div class="form-row">
            <input type="text" name="contact[name]" placeholder="Your name*" required>
            <input type="email" name="contact[email]" placeholder="Email*" required>
          </div>
          <div class="form-row">
            <input type="text" name="contact[phone]" placeholder="Phone Number*" required>
            <input type="text" name="contact[city]" placeholder="City*" required>
          </div>
          <div class="form-row">
            <textarea name="contact[body]" placeholder="Your Message" rows="4"></textarea>
          </div>
          <button type="submit" class="submit-btn">SUBMIT</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Map Section -->
  {% if section.settings.map_embed != blank %}
  <div class="map-container">
    {{ section.settings.map_embed | raw }}
  </div>
  {% endif %}
</section>

<style>
.contact-map-section {
  padding: 60px 0;
}
.contact-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 40px;
}
.contact-info {
  flex: 1;
  min-width: 300px;
}
.contact-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 10px;
}
.contact-description {
  font-size: 14px;
  color: #555;
  margin-bottom: 20px;
}
.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}
.icon-wrapper {
  background: #f9f5f1;
  border-radius: 50%;
  width: 36px;
  height: 36px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10px;
}
.item-content .label {
  color: #b18659;
  font-size: 13px;
  font-weight: 600;
}
.item-content a, .item-content span {
  display: block;
  font-size: 14px;
  color: #000;
  text-decoration: none;
}
.social-icons {
  display: flex;
  gap: 12px;
  margin-top: 20px;
}
.social-icon {
  width: 34px;
  height: 34px;
  background: #b18659;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  color: #fff;
  transition: 0.3s;
}
.social-icon:hover {
  opacity: 0.8;
}
.contact-form {
  flex: 1;
  min-width: 300px;
}
.form-wrapper {
  background: #f9f5f1;
  padding: 30px;
  border-radius: 10px;
}
.form-row {
  display: flex;
  gap: 15px;
  margin-bottom: 15px;
}
.form-row input,
.form-row textarea {
  width: 100%;
  padding: 12px;
  border: none;
  background: #f5f5f5;
  border-radius: 6px;
  font-size: 14px;
}
.submit-btn {
  background: transparent;
  border: 1px solid #b18659;
  color: #b18659;
  padding: 10px 30px;
  cursor: pointer;
  transition: 0.3s;
  font-size: 14px;
  letter-spacing: 1px;
}
.submit-btn:hover {
  background: #b18659;
  color: #fff;
}
.map-container {
  margin-top: 40px;
  overflow: hidden;
  border-radius: 10px;
}
.map-container iframe {
  width: 100%;
  height: 400px;
  border: 0;
}
@media (max-width: 768px) {
  .contact-container {
    flex-direction: column;
  }
  .form-row {
    flex-direction: column;
  }
}
</style>

{% schema %}
{
  "name": "Contact Section with Map",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get in touch with us"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Our friendly team are available online, in store or over the phone to help with any questions you may have."
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "Hello@honeypotfurniture.ae"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "(00) 112 365 489"
    },
    {
      "type": "text",
      "id": "timing",
      "label": "Timing",
      "default": "Monday to Friday: 9am - 5pm"
    },
    {
      "type": "text",
      "id": "weekend",
      "label": "Weekend",
      "default": "Saturday: 10am - 3pm"
    },
    {
      "type": "textarea",
      "id": "map_embed",
      "label": "Google Map Embed Code",
      "default": "<iframe src='https://www.google.com/maps/embed?pb=YOUR_MAP_CODE' width='100%' height='400' style='border:0;' allowfullscreen='' loading='lazy'></iframe>"
    },
    {
      "type": "url",
      "id": "facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "youtube",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "whatsapp",
      "label": "WhatsApp URL"
    }
  ],
  "presets": [
    {
      "name": "Contact Section with Map"
    }
  ]
}
{% endschema %}
