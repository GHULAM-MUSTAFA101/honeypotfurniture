<!-- Section Schema for Shopify Customizer -->
{% schema %}
{
  "name": "Custom Sofa Journey",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show Section",
      "default": true
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "image_left",
          "label": "Image on Left"
        },
        {
          "value": "image_right",
          "label": "Image on Right"
        }
      ],
      "default": "image_right"
    },
    {
      "type": "range",
      "id": "left_width",
      "label": "Left Content Width",
      "min": 30,
      "max": 70,
      "step": 5,
      "unit": "%",
      "default": 50
    },
    {
      "type": "range",
      "id": "right_width",
      "label": "Right Content Width",
      "min": 30,
      "max": 70,
      "step": 5,
      "unit": "%",
      "default": 50
    },
    {
      "type": "header",
      "content": "Left Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Custom Sofa Journey"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Font Size",
      "min": 16,
      "max": 60,
      "step": 1,
      "unit": "px",
      "default": 36
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>With Honeypot Furniture</p>"
    },
    {
      "type": "range",
      "id": "content_size",
      "label": "Content Font Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "checkbox",
      "id": "show_left_border",
      "label": "Show Left Border",
      "default": true
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Start Your Journey"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "button_padding_top",
      "label": "Button Padding Top/Bottom",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "range",
      "id": "button_padding_sides",
      "label": "Button Padding Left/Right",
      "min": 10,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "button_margin_top",
      "label": "Button Margin Top",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "header",
      "content": "Right Content"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Sofa Journey",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<style>
  .custom-sofa-section {
    display: flex;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 20px;
    box-sizing: border-box;
  }
  
  .custom-sofa-section.reverse {
    flex-direction: row-reverse;
  }
  
  .sofa-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 40px;
    box-sizing: border-box;
  }
  
  .sofa-content.with-border {
    border-left: 3px solid #000;
  }
  
  .sofa-heading {
    margin-bottom: 20px;
    line-height: 1.2;
  }
  
  .sofa-text {
    margin-bottom: 0;
    line-height: 1.6;
  }
  
  .sofa-button {
    display: inline-block;
    text-align: center;
    text-decoration: none;
    font-weight: 500;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .sofa-button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }
  
  .sofa-image {
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .sofa-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  @media (max-width: 768px) {
    .custom-sofa-section {
      flex-direction: column;
      padding: 40px 15px;
    }
    
    .sofa-content.with-border {
      border-left: none;
      border-top: 3px solid #000;
      padding-top: 30px;
    }
    
    .custom-sofa-section.reverse .sofa-content.with-border {
      border-left: none;
      border-top: 3px solid #000;
    }
  }
</style>

<!-- Section HTML -->
<div class="custom-sofa-section {% if section.settings.layout == 'image_left' %}reverse{% endif %}" 
     {% unless section.settings.show_section %}style="display: none;"{% endunless %}>
  
  <!-- Left Content Block -->
  <div class="sofa-content {% if section.settings.show_left_border %}with-border{% endif %}" 
       style="width: {{ section.settings.left_width }}%;">
    <h2 class="sofa-heading" style="font-size: {{ section.settings.heading_size }}px;">
      {{ section.settings.heading }}
    </h2>
    
    <div class="sofa-text" style="font-size: {{ section.settings.content_size }}px;">
      {{ section.settings.content }}
    </div>
    
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" 
         class="sofa-button" 
         style="
           background-color: {{ section.settings.button_bg_color }};
           color: {{ section.settings.button_text_color }};
           padding: {{ section.settings.button_padding_top }}px {{ section.settings.button_padding_sides }}px;
           margin-top: {{ section.settings.button_margin_top }}px;
           font-size: {{ section.settings.content_size | plus: 2 }}px;
         ">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
  
  <!-- Right Image Block -->
  <div class="sofa-image" style="width: {{ section.settings.right_width }}%;">
    {% if section.settings.right_image != blank %}
      <img src="{{ section.settings.right_image | img_url: '800x' }}" 
           alt="{{ section.settings.heading | escape }}" />
    {% else %}
      <div style="background: #f5f5f5; width: 100%; height: 400px; display: flex; align-items: center; justify-content: center;">
        <p>Add an image in the theme editor</p>
      </div>
    {% endif %}
  </div>
</div>