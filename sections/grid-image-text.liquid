{% comment %}
✅ Section: Pick Your Fabric & Colour (Multiple Swatches)
- Add unlimited swatches
- Link swatches to fabric via fabric_id
- Responsive: 2 per row on mobile
{% endcomment %}

<section class="fabric-section_main">
  <div class="fabric-section">
    <div class="fabric-header">
      <h2 class="fabric-step">{{ section.settings.heading_number }}</h2>
      <h3 class="fabric-title">{{ section.settings.heading }}</h3>
      <p class="fabric-desc">{{ section.settings.subheading_1 }}</p>
      <p class="fabric-desc">{{ section.settings.subheading_2 }}</p>
    </div>

    <div class="fabric-grid">
      {% assign swatches = section.blocks | where: 'type', 'swatch' %}
      {% assign fabrics = section.blocks | where: 'type', 'fabric' %}
      {% for fabric in fabrics %}
        <div class="fabric-item" data-fabric-item>
          <div class="fabric-image">
            {% if fabric.settings.main_image != blank %}
              <img src="{{ fabric.settings.main_image | image_url: width: 500 }}" alt="{{ fabric.settings.title }}" data-fabric-main-image>
            {% else %}
              <div class="placeholder-image">No image</div>
            {% endif %}
          </div>
          <p class="fabric-name">{{ fabric.settings.title }}</p>

          <div class="fabric-swatches">
            {% for swatch in swatches %}
              {% if swatch.settings.fabric_id == fabric.id %}
                <span
                  class="fabric-swatch {% if swatch.settings.swatch_image != blank %}has-image{% endif %}"
                  style="{% if swatch.settings.swatch_color != blank %}background-color: {{ swatch.settings.swatch_color }};{% endif %}"
                  data-swatch-image="{% if swatch.settings.swatch_image != blank %}{{ swatch.settings.swatch_image | image_url: width: 500 }}{% endif %}">
                  {% if swatch.settings.swatch_image != blank %}
                    <img src="{{ swatch.settings.swatch_image | image_url: width: 40 }}" alt="Swatch" class="swatch-thumb">
                  {% endif %}
                </span>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="fabric-footer">
      <h4>{{ section.settings.footer_title }}</h4>
      <div class="fabric-footer-boxes">
        <div class="fabric-box">
          <span>01</span>
          <p>{{ section.settings.list_item_1 }}</p>
        </div>
        <div class="fabric-box">
          <span>02</span>
          <p>{{ section.settings.list_item_2 }}</p>
        </div>
        <div class="fabric-box">
          <span>03</span>
          <p>{{ section.settings.list_item_3 }}</p>
        </div>
      </div>
      <p class="fabric-note">{{ section.settings.footer_note }}</p>
    </div>
  </div>
</section>

<style>
  .fabric-section_main{ background:#EDEDED }
  .fabric-section {
    padding: 60px 20px;
    text-align: left;
    max-width:1440px;
    margin:auto;
    color: #000;
  }
  .fabric-header {
    max-width: 700px;
    margin: 0 auto 50px;
    text-align:center;
  }
  .fabric-step { font-size: 35px; font-weight: 700; }
  .fabric-title { font-size: 28px; font-weight: 500; margin: 10px 0 15px; }
  .fabric-desc { font-size: 15px; color: #171717; margin: 4px 0; }
  .fabric-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 25px;
    margin-bottom: 60px;
  }
  .fabric-item { text-align: center; }
  .fabric-image img {
    width: 100%;
    border-radius: 4px;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }
  .fabric-name {
    font-weight: 500;
    font-size: 16px;
    margin-top: 10px;
    text-align:start;
  }
  .fabric-swatches {
    display: flex;
    justify-content: start;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 8px;
  }
  .fabric-swatch {
    width: 28px;
    border-radius: 50%;
    border: 1px solid #ccc;
    cursor: pointer;
    transition: transform 0.2s ease, border 0.2s ease;
    overflow: hidden;
  }
  .fabric-swatch img.swatch-thumb {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
  }
  .fabric-swatch:hover {
    transform: scale(1.2);
    border-color: #000;
  }
  .fabric-swatch.active { border: 2px solid #000; }
  .fabric-footer { text-align: center; margin-top: 40px; }
  .fabric-footer h4 { font-size: 20px; font-weight: 600; margin-bottom: 30px; }
  .fabric-footer-boxes { display: flex; justify-content: center; gap: 20px; flex-wrap: wrap; margin-bottom: 25px; }
  .fabric-box {
    border: 1px solid #565656;
    border-radius: 10px;
    padding: 20px 30px;
    width: 267px;
    text-align: center;
    transition: all 0.3s ease;
  }
  .fabric-box:hover { border-color: #000; transform: translateY(-3px); }
  .fabric-box span { font-size: 20px; font-weight: 700; margin-bottom: 6px; display: block; }
  .fabric-box p { margin: 0; font-size: 15px; }
  .fabric-note { font-size: 13px; color: #171717; }
  @media (max-width: 992px) {
    .fabric-grid { grid-template-columns: repeat(3, 1fr); }
  }
  @media (max-width: 768px) {
    .fabric-grid { grid-template-columns: repeat(2, 1fr); } /* ✅ mobile 2 per row */
  }
  @media (max-width: 480px) {
    .fabric-grid { grid-template-columns: 1fr; }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('[data-fabric-item]').forEach(function(item) {
    const mainImg = item.querySelector('[data-fabric-main-image]');
    const swatches = item.querySelectorAll('.fabric-swatch');
    if (!swatches.length || !mainImg) return;

    const first = Array.from(swatches).find(s => s.dataset.swatchImage);
    if (first) {
      first.classList.add('active');
      mainImg.src = first.dataset.swatchImage;
    }

    swatches.forEach(function(swatch) {
      swatch.addEventListener('click', function() {
        const newImg = swatch.getAttribute('data-swatch-image');
        if (!newImg) return;
        swatches.forEach(s => s.classList.remove('active'));
        swatch.classList.add('active');
        mainImg.style.opacity = 0;
        setTimeout(() => {
          mainImg.src = newImg;
          mainImg.style.opacity = 1;
        }, 200);
      });
    });
  });
});
</script>

{% schema %}
{
  "name": "Pick Your Fabric & Colour",
  "settings": [
    { "type": "text", "id": "heading_number", "label": "Step Number", "default": "STEP 5" },
    { "type": "text", "id": "heading", "label": "Main Heading", "default": "Pick Your Fabric & Colour" },
    { "type": "text", "id": "subheading_1", "label": "Line 1", "default": "Explore over 30 fabric types, each with more than 30 colours." },
    { "type": "text", "id": "subheading_2", "label": "Line 2", "default": "Our ten curated looks make it easy to find the perfect texture and tone for your home." },
    { "type": "text", "id": "footer_title", "label": "Footer Heading", "default": "Choose From Three Clear Price Categories" },
    { "type": "text", "id": "list_item_1", "label": "Box 1", "default": "Honeypot Classics" },
    { "type": "text", "id": "list_item_2", "label": "Box 2", "default": "Honeypot Signatures" },
    { "type": "text", "id": "list_item_3", "label": "Box 3", "default": "Honeypot Performance" },
    { "type": "text", "id": "footer_note", "label": "Bottom Note", "default": "All performance fabrics feature FibreGuard – stain-resistant, pet-friendly, and built to last!" }
  ],
  "blocks": [
    {
      "type": "fabric",
      "name": "Fabric Item",
      "settings": [
        { "type": "text", "id": "title", "label": "Fabric Name" },
        { "type": "image_picker", "id": "main_image", "label": "Main Fabric Image" }
      ]
    },
    {
      "type": "swatch",
      "name": "Swatch",
      "settings": [
        { "type": "color", "id": "swatch_color", "label": "Swatch Color" },
        { "type": "image_picker", "id": "swatch_image", "label": "Swatch Image" },
        { "type": "text", "id": "fabric_id", "label": "Fabric ID (Copy from Fabric Block)" }
      ]
    }
  ],
  "presets": [
    { "name": "Pick Your Fabric & Colour", "category": "Custom" }
  ]
}
{% endschema %}
