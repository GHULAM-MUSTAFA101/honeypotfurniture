{% comment %}
✅ Final Section: Pick Your Fabric & Colour
- 20 swatches supported (schema uses explicit fields, no Liquid inside JSON)
- Mobile: 1 row mein 2 products
- Swatch click → main image updates
- Responsive layout
{% endcomment %}

<section class="fabric-section_main">
  <div class="fabric-section">
    <div class="fabric-header">
      <h2 class="fabric-step">{{ section.settings.heading_number }}</h2>
      <h3 class="fabric-title">{{ section.settings.heading }}</h3>
      <p class="fabric-desc">{{ section.settings.subheading_1 }}</p>
      <p class="fabric-desc">{{ section.settings.subheading_2 }}</p>
    </div>

    <div class="fabric-grid">
      {% for block in section.blocks %}
        <div class="fabric-item" data-fabric-item>
          <div class="fabric-image">
            {% if block.settings.main_image != blank %}
              <img src="{{ block.settings.main_image | image_url: width: 500 }}" alt="{{ block.settings.title }}" data-fabric-main-image>
            {% else %}
              <div class="placeholder-image">No image</div>
            {% endif %}
          </div>
          <p class="fabric-name">{{ block.settings.title }}</p>

          <div class="fabric-swatches">
            {% comment %} Explicit swatch fields (1..20) read from block.settings {% endcomment %}
            {% for i in (1..20) %}
              {% assign color_key = 'color_swatch_' | append: i %}
              {% assign image_key = 'color_image_' | append: i %}
              {% assign swatch_color = block.settings[color_key] %}
              {% assign swatch_image = block.settings[image_key] %}
              {% if swatch_color != blank or swatch_image != blank %}
                <span
                  class="fabric-swatch {% if swatch_image != blank %}has-image{% endif %}"
                  style="{% if swatch_color != blank %}background-color: {{ swatch_color }};{% endif %}"
                  data-swatch-image="{% if swatch_image != blank %}{{ swatch_image | image_url: width: 500 }}{% endif %}">
                  {% if swatch_image != blank %}
                    <img src="{{ swatch_image | image_url: width: 40 }}" alt="Swatch {{ i }}" class="swatch-thumb">
                  {% endif %}
                </span>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="fabric-footer">
      <h4>{{ section.settings.footer_title }}</h4>
      <div class="fabric-footer-boxes">
        <div class="fabric-box">
          <span>01</span>
          <p>{{ section.settings.list_item_1 }}</p>
        </div>
        <div class="fabric-box">
          <span>02</span>
          <p>{{ section.settings.list_item_2 }}</p>
        </div>
        <div class="fabric-box">
          <span>03</span>
          <p>{{ section.settings.list_item_3 }}</p>
        </div>
      </div>
      <p class="fabric-note">{{ section.settings.footer_note }}</p>
    </div>
  </div>
</section>

<style>
.fabric-section_main { background:#EDEDED; }
.fabric-section {
  padding: 60px 20px;
  text-align: left;
  max-width:1440px;
  margin:auto;
  color: #000;
}
.fabric-header { max-width: 700px; margin: 0 auto 50px; text-align:center; }
.fabric-step { text-transform: uppercase; font-weight: 700; font-size: 35px; letter-spacing: 1px; }
.fabric-title { font-size: 28px; font-weight: 500; margin: 10px 0 15px; }
.fabric-desc { font-size: 15px; color: #171717; margin: 4px 0; }
.fabric-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 25px; margin-bottom: 60px; }
.fabric-item { text-align: center; }
.fabric-image img { width: 100%; border-radius: 4px; object-fit: cover; transition: opacity 0.3s ease; }
.fabric-name { font-weight: 500; font-size: 16px; margin-top: 10px; text-align:start; }
.fabric-swatches { display: flex; justify-content: start; flex-wrap: wrap; gap: 6px; margin-top: 8px; }
.fabric-swatch { width: 28px; height: 28px; border-radius: 50%; border: 1px solid #ccc; cursor: pointer; transition: transform 0.2s ease, border 0.2s ease; overflow: hidden; display: inline-flex; align-items: center; justify-content: center; }
.fabric-swatch img.swatch-thumb { width: 100%; height: 100%; border-radius: 50%; object-fit: cover; }
.fabric-swatch:hover { transform: scale(1.2); border-color: #000; }
.fabric-swatch.active { border: 2px solid #000; }
.fabric-footer { text-align: center; margin-top: 40px; }
.fabric-footer h4 { font-size: 20px; font-weight: 600; margin-bottom: 30px; text-transform: capitalize; }
.fabric-footer-boxes { display: flex; justify-content: center; gap: 20px; flex-wrap: wrap; margin-bottom: 25px; }
.fabric-box { border: 1px solid #565656; border-radius: 10px; padding: 20px 30px; width: 267px; text-align: center; transition: all 0.3s ease; }
.fabric-box:hover { border-color: #000; transform: translateY(-3px); }
.fabric-box span { display: block; font-size: 20px; font-weight: 700; margin-bottom: 6px; }
.fabric-box p { margin: 0; font-size: 15px; }
.fabric-note { font-size: 13px; color: #171717; }

@media (max-width: 992px) { .fabric-grid { grid-template-columns: repeat(3, 1fr); } }
@media (max-width: 768px) { .fabric-grid { grid-template-columns: repeat(2, 1fr); } }
@media (max-width: 480px) { .fabric-grid { grid-template-columns: repeat(2, 1fr); } } /* mobile: 2 per row */
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('[data-fabric-item]').forEach(function(item) {
    const mainImg = item.querySelector('[data-fabric-main-image]');
    const swatches = item.querySelectorAll('.fabric-swatch');

    if (!swatches.length || !mainImg) return;

    // Auto select first swatch with image
    const first = Array.from(swatches).find(s => s.dataset.swatchImage);
    if (first) {
      first.classList.add('active');
      mainImg.src = first.dataset.swatchImage;
    }

    swatches.forEach(function(swatch) {
      swatch.addEventListener('click', function() {
        const newImg = swatch.getAttribute('data-swatch-image');
        if (!newImg) return;

        swatches.forEach(s => s.classList.remove('active'));
        swatch.classList.add('active');

        mainImg.style.opacity = 0;
        setTimeout(() => {
          mainImg.src = newImg;
          mainImg.style.opacity = 1;
        }, 200);
      });
    });
  });
});
</script>

