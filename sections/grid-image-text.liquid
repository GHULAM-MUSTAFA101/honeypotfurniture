<!-- sections/select-filling.liquid -->
<section class="select-filling" style="
  background-color: {{ section.settings.background_color }};
  padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_sides }}px {{ section.settings.section_padding_bottom }}px {{ section.settings.section_padding_sides }}px;
">
  <div class="container">
    
    <!-- Header Section - Centered -->
    <div class="section-header" style="text-align: center;">
      <div class="section-number" style="margin-bottom: {{ section.settings.number_margin_bottom }}px;">
        <h2 style="
          color: {{ section.settings.number_color }};
          font-size: {{ section.settings.number_font_size }}px;
          font-weight: {{ section.settings.number_font_weight }};
          margin: 0;
        ">{{ section.settings.number }}</h2>
      </div>
      
      <div class="section-heading" style="margin-bottom: {{ section.settings.heading_margin_bottom }}px;">
        <h3 style="
          color: {{ section.settings.heading_color }};
          font-size: {{ section.settings.heading_font_size }}px;
          font-weight: {{ section.settings.heading_font_weight }};
          margin: 0;
        ">{{ section.settings.heading }}</h3>
      </div>
      
      <div class="section-subheading" style="
        max-width: {{ section.settings.subheading_max_width }}px;
        margin: 0 auto;
      ">
        <p style="
          color: {{ section.settings.subheading_color }};
          font-size: {{ section.settings.subheading_font_size }}px;
          line-height: {{ section.settings.subheading_line_height }};
          margin: 0;
          text-align: center;
        ">{{ section.settings.subheading }}</p>
      </div>
    </div>

    <!-- Filling Options Grid -->
    <div class="filling-grid" style="gap: {{ section.settings.grid_gap }}px; margin-top: {{ section.settings.grid_margin_top }}px;">
      
      <!-- Left Column - Feather Filled -->
      <div class="filling-column">
        <div class="image-with-label">
          {% if section.settings.feather_image %}
            <div class="image-container">
              {{ section.settings.feather_image | image_url: width: 600 | image_tag: 
                class: 'filling-image', 
                style: 'border-radius: ' | append: section.settings.image_border_radius | append: 'px; width: 100%; height: auto;' 
              }}
              <div class="image-label" style="
                background-color: {{ section.settings.feather_label_bg }};
                color: {{ section.settings.feather_label_text }};
                font-size: {{ section.settings.label_font_size }}px;
                font-weight: {{ section.settings.label_font_weight }};
                padding: {{ section.settings.label_padding }}px;
                border-radius: 0 {{ section.settings.label_border_radius }}px 0 0;
              ">
                {{ section.settings.feather_label }}
              </div>
            </div>
          {% endif %}
        </div>
        
        <div class="filling-content" style="margin-top: {{ section.settings.content_margin_top }}px;">
          <div style="
            color: {{ section.settings.content_text_color }};
            font-size: {{ section.settings.content_font_size }}px;
            line-height: {{ section.settings.content_line_height }};
            text-align: {{ section.settings.content_text_align }};
          ">{{ section.settings.feather_content }}</div>
        </div>
      </div>

      <!-- Right Column - Foam Filled -->
      <div class="filling-column">
        <div class="image-with-label">
          {% if section.settings.foam_image %}
            <div class="image-container">
              {{ section.settings.foam_image | image_url: width: 600 | image_tag: 
                class: 'filling-image', 
                style: 'border-radius: ' | append: section.settings.image_border_radius | append: '' 
              }}
              <div class="image-label" style="
                background-color: {{ section.settings.foam_label_bg }};
                color: {{ section.settings.foam_label_text }};
                font-size: {{ section.settings.label_font_size }}px;
                font-weight: {{ section.settings.label_font_weight }};
                padding: {{ section.settings.label_padding }}px;
                border-radius: 0 {{ section.settings.label_border_radius }}px 0 0;
              ">
                {{ section.settings.foam_label }}
              </div>
            </div>
          {% endif %}
        </div>
        
        <div class="filling-content" style="margin-top: {{ section.settings.content_margin_top }}px;">
          <div style="
            color: {{ section.settings.content_text_color }};
            font-size: {{ section.settings.content_font_size }}px;
            line-height: {{ section.settings.content_line_height }};
            text-align: {{ section.settings.content_text_align }};
          ">{{ section.settings.foam_content }}</div>
        </div>
      </div>
      
    </div>
  </div>
</section>

<style>
.select-filling {
  border-bottom: 2px solid #f5eee8;
  max-width: 1200px;
  margin: auto;
}

.select-filling .container {
  max-width: {{ section.settings.container_max_width }}px;
  margin: 0 auto;
}

.filling-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
}

.filling-column {
  display: flex;
  flex-direction: column;
}

.image-container {
  position: relative;
  display: inline-block;
  width: 100%;
}

.image-label {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
}

.filling-image {
  display: block;
}

/* Responsive */
@media (max-width: 768px) {
  .filling-grid {
    grid-template-columns: 1fr;
    gap: 30px !important;
  }
  
  .image-label {
    font-size: 14px !important;
    padding: 8px 12px !important;
  }
}
</style>

