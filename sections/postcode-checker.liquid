{{ 'postcode-checker.css' | asset_url | stylesheet_tag }}

<div
  class="section__c-form spacing spacing-xs color-{{ section.settings.color_scheme }} gradient"
  style="
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
    --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;
  "
>
  <div
    class="{{ section.settings.section_width }} m-auto"
    {% if section.settings.section_width == 'customized-width' %}
      style="--page-width: {{ section.settings.customize_width }}px;"
    {% endif %}
  >
    {%- if section.settings.heading != blank -%}
      <div class="p-w__header">
        <div class="p-w__header--wrapper center">
          <h2
            id="SectionHeading-{{ section.id }}"
            class="p-w__heading heading-size-default m-0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          >
            {{ section.settings.heading | escape }}
          </h2>
        </div>
      </div>
    {%- else -%}
      <h2 class="visually-hidden">{{ 'templates.contact.form.title' | t }}</h2>
    {%- endif -%}
    <div class="p-w__content">
      <div
        class="contact grid-col d-flex a-i-center f-wrap pos-relative"
        style="--c-xs: 1; --c-sm: 1; --c-md: 2; --c-lg: 2; --grid: 1.5rem;"
      >
        <div class="grid__item">
          <div class="contact__form">
            {%- liquid
              if settings.animations_reveal_on_scroll
              endif
            -%}

            <div id="delivery-cost-app" class="a-i-center">
              <form id="postcode-form" class="grid-col d-flex a-i-center f-wrap pos-relative">
                <div class="field f-a-none f-b-none pos-relative grid__item">
                  <input
                    class="field__input field__input--inline postcode-checker-input"
                    type="text"
                    id="postcode-input"
                    name="postcode"
                    placeholder="Enter your postcode"
                  >
                </div>

                <div class="field__action contact__button pos-relative m-t m-b grid__item" style="--m-t: 3.2rem; --m-b: 3rem;">
                  <button
                    type="submit"
                    class="button {{ settings.button_style | prepend: 'button--style-' }} mi-w"
                    style="--mi-w: 25rem;"
                  >
                    <span class="text">Check</span>
                  </button>
                </div>
              </form>
              <p id="delivery-day-result" class="{{ section.settings.instructions_alignment }}"></p>
              <p id="delivery-cost-result" class="{{ section.settings.instructions_alignment }}"></p>
            </div>

            <p class="{{ section.settings.instructions_alignment }}">{{ section.settings.instructions | escape }}</p>
          </div>
        </div>
        {%- if section.blocks.size > 0 -%}
          <div class="grid__item">
            <div class="contact__info rich-text">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'heading' -%}
                    {%- if block.settings.heading != blank -%}
                      <h2
                        class="rich-text__heading rte m-0 element-spacing{% if block.settings.show_line_separator %} b-bottom{% endif %}"
                        {{ block.shopify_attributes }}
                        style="
                          --padding-top: {{ block.settings.padding_top }}px;
                          --padding-bottom: {{ block.settings.padding_bottom }}px;
                        "
                      >
                        {{ block.settings.heading | replace: 'p>', 'span>' }}
                      </h2>
                    {%- endif -%}
                  {%- when 'caption' -%}
                    {%- if block.settings.caption != blank -%}
                      <p
                        class="rich-text__caption element-spacing m-0"
                        {{ block.shopify_attributes }}
                        style="
                          --padding-top: {{ block.settings.padding_top }}px;
                          --padding-bottom: {{ block.settings.padding_bottom }}px;
                        "
                      >
                        {{ block.settings.caption | escape }}
                      </p>
                    {%- endif -%}
                  {%- when 'text' -%}
                    {%- if block.settings.text != blank -%}
                      <div
                        class="rich-text__text rte element-spacing"
                        {{ block.shopify_attributes }}
                        style="
                          --padding-top: {{ block.settings.padding_top }}px;
                          --padding-bottom: {{ block.settings.padding_bottom }}px;
                        "
                      >
                        {{ block.settings.text }}
                      </div>
                    {%- endif -%}
                  {%- when 'button' -%}
                    {%- if block.settings.primary_button_label != blank
                      or block.settings.secondary_button_label != blank
                    -%}
                      <div
                        class="rich-text__buttons d-flex f-wrap g-gap element-spacing j-c-{{ section.settings.text_alignment | replace: 'left', 'start' | replace: 'right', 'end' }}"
                        {{ block.shopify_attributes }}
                        style="
                          --g-gap: 1.5rem;
                          --padding-top: {{ block.settings.padding_top }}px;
                          --padding-bottom: {{ block.settings.padding_bottom }}px;
                        "
                      >
                        {%- if block.settings.primary_button_label != blank -%}
                          <a
                            {% if block.settings.primary_button_link == blank %}
                              role="link" aria-disabled="true"
                            {% else %}
                              href="{{ block.settings.primary_button_link }}"
                            {% endif %}
                            class="button {{ settings.button_style | prepend: 'button--style-' }} button--transparent mi-w color-{{ block.settings.primary_button_color_scheme }} gradient"
                            style="--mi-w: 25rem;"
                          >
                            <span>{{- block.settings.primary_button_label | escape -}}</span>
                          </a>
                        {%- endif -%}
                        {%- if block.settings.secondary_button_label != blank -%}
                          <a
                            {% if block.settings.secondary_button_link == blank %}
                              role="link" aria-disabled="true"
                            {% else %}
                              href="{{ block.settings.secondary_button_link }}"
                            {% endif %}
                            class="button {{ settings.button_style | prepend: 'button--style-' }} button--transparent mi-w color-{{ block.settings.secondary_button_color_scheme }} gradient"
                            style="--mi-w: 25rem;"
                          >
                            <span>{{- block.settings.secondary_button_label | escape -}}</span>
                          </a>
                        {%- endif -%}
                      </div>
                    {%- endif -%}
                {%- endcase -%}
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% javascript %}
  document.addEventListener('DOMContentLoaded', () => {

    let delivery_charges = "";
    let delivery_day = "";

    const fetchDeliveryCost = async (postcode) => {
      try {
        const response = await fetch(
          'https://cdn.shopify.com/s/files/1/0857/1358/4415/files/deliverycharges.json'
        );
        const data = await response.json();

        const entry = data.find((item) => item.postcode === postcode);

        if (entry && entry.delivery_charges !== "Sorry! We don't deliver here.") {
          return {
            delivery_charges: entry.delivery_charges,
            delivery_day: entry.delivery_day !== "N/A" ? entry.delivery_day : 'Not available',
          };
        } else {
          return { error: "Sorry! We don't deliver here." };
        }
      } catch (error) {
        console.error('Error fetching delivery cost:', error);
        return { error: 'Not available' };
      }
    };

    const renderDeliveryCost = async (postcode) => {
      const result = await fetchDeliveryCost(postcode);
      const deliveryDayResult = document.getElementById('delivery-day-result');
      const deliveryCostResult = document.getElementById('delivery-cost-result');

      if (result.error) {
        deliveryDayResult.textContent = ``;
        deliveryCostResult.textContent = result.error;
      } else {
        deliveryDayResult.textContent = `We deliver to your area (${postcode}) on: ${result.delivery_day}`;
        deliveryCostResult.textContent = `Delivery Charge: Â£${result.delivery_charges}`;
      }
    };

    const postcodeForm = document.getElementById('postcode-form');
    postcodeForm.addEventListener('submit', async (event) => {
      event.preventDefault(); // Prevent form submission
      const postcodeInput = document.getElementById('postcode-input').value.trim().toUpperCase();

      if (postcodeInput !== '') {
        await renderDeliveryCost(postcodeInput);
      } else {
        alert('Please enter a valid postcode.');
      }
    });
  });
{% endjavascript %}

