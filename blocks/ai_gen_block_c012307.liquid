{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .tabby-how-it-works-{{ ai_gen_id }} {
    padding-top: {{ block.settings.section_padding_top }}px;
    padding-bottom: {{ block.settings.section_padding_bottom }}px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .tabby-how-it-works__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_font_size }}px;
    text-align: center;
    margin-bottom: {{ block.settings.heading_margin_bottom }}px;font-weight: 700;
  }

  .tabby-how-it-works__steps-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.step_spacing }}px;
  }

  .tabby-how-it-works__step-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    text-align: {{ block.settings.text_alignment }};}

  @media screen and (min-width: 750px) {
    .tabby-how-it-works__step-{{ ai_gen_id }} {
      {% if block.settings.step_layout == 'side-by-side' %}
        flex-direction: row;
        align-items: center;
        gap: 30px;
      {% endif %}
    }
  }

  .tabby-how-it-works__step-content-{{ ai_gen_id }} {
    flex: 1;
  }

  .tabby-how-it-works__step-label-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 8px;
    color: {{ block.settings.step_label_color }};
  }

  .tabby-how-it-works__step-text-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 20px;
  }

  .tabby-how-it-works__step-image-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.image_max_width }}px;
    width: 100%;
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .tabby-how-it-works__step-image-wrapper-{{ ai_gen_id }} {
      {% if block.settings.step_layout == 'side-by-side' %}
        flex: 1;{% endif %}
    }
  }

  .tabby-how-it-works__step-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    padding-bottom: 75%;
    position: relative;
    border-radius: 8px;
    overflow: hidden;background-color: #f4f4f4;
  }

  .tabby-how-it-works__step-image-placeholder-{{ ai_gen_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .tabby-how-it-works__step-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: 8px;
    display: block;
  }
{% endstyle %}

<div class="tabby-how-it-works-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <h2 class="tabby-how-it-works__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  <div class="tabby-how-it-works__steps-{{ ai_gen_id }}">
    <!-- Step 1 -->
    <div class="tabby-how-it-works__step-{{ ai_gen_id }}">
      <div class="tabby-how-it-works__step-content-{{ ai_gen_id }}">
        <div class="tabby-how-it-works__step-label-{{ ai_gen_id }}">{{ block.settings.step_1_label }}</div>
        <div class="tabby-how-it-works__step-text-{{ ai_gen_id }}">{{ block.settings.step_1_text }}</div>
      </div>
      <div class="tabby-how-it-works__step-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.step_1_image %}
          <img
            src="{{ block.settings.step_1_image | image_url: width: block.settings.image_max_width }}" 
            alt="{{ block.settings.step_1_text }}"
            loading="lazy"
            class="tabby-how-it-works__step-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="tabby-how-it-works__step-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Step 2 -->
    <div class="tabby-how-it-works__step-{{ ai_gen_id }}">
      <div class="tabby-how-it-works__step-content-{{ ai_gen_id }}">
        <div class="tabby-how-it-works__step-label-{{ ai_gen_id }}">{{ block.settings.step_2_label }}</div>
        <div class="tabby-how-it-works__step-text-{{ ai_gen_id }}">{{ block.settings.step_2_text }}</div>
      </div>
      <div class="tabby-how-it-works__step-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.step_2_image %}
          <img 
            src="{{ block.settings.step_2_image | image_url: width: block.settings.image_max_width }}" 
            alt="{{ block.settings.step_2_text }}"
            loading="lazy"
            class="tabby-how-it-works__step-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="tabby-how-it-works__step-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Step 3 -->
    <div class="tabby-how-it-works__step-{{ ai_gen_id }}">
      <div class="tabby-how-it-works__step-content-{{ ai_gen_id }}">
        <div class="tabby-how-it-works__step-label-{{ ai_gen_id }}">{{ block.settings.step_3_label }}</div>
        <div class="tabby-how-it-works__step-text-{{ ai_gen_id }}">{{ block.settings.step_3_text }}</div>
      </div>
      <div class="tabby-how-it-works__step-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.step_3_image %}
          <img 
            src="{{ block.settings.step_3_image | image_url: width: block.settings.image_max_width }}" 
            alt="{{ block.settings.step_3_text }}"
            loading="lazy"
            class="tabby-how-it-works__step-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="tabby-how-it-works__step-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

