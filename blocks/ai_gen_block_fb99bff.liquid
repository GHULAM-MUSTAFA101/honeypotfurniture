{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .tabby-info-block-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding-top: {{ block.settings.section_padding_top }}px;
    padding-bottom: {{ block.settings.section_padding_bottom }}px;
    text-align: {{ block.settings.text_alignment }};
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  }

  .tabby-logo-{{ ai_gen_id }} {
    max-width: 120px;
    margin: 0 auto {{ block.settings.logo_margin_bottom_desktop }}px;
    display: block;
  }

  .tabby-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_font_size }}px;
    font-weight: 700;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .tabby-subheadline-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 500;
    max-width: {{ block.settings.subheadline_max_width }}px;
    margin: 0 auto {{ block.settings.subheadline_margin_bottom }}px;
    line-height: 1.5;
  }

  .tabby-badges-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ block.settings.badge_spacing_mobile }}px;
    margin-bottom: 30px;
  }

  .tabby-badge-{{ ai_gen_id }} {
    background-color: {{ block.settings.badge_background_color }};
    color: {{ block.settings.badge_text_color }};
    border-radius: 50px;
    padding: 12px 20px;
    font-weight: 700;
    font-size: 14px;
    display: inline-block;
  }

  .tabby-hero-image-wrapper-{{ ai_gen_id }} {
    margin-top: {{ block.settings.image_margin_top }}px;
    text-align: center;
  }

  .tabby-hero-image-{{ ai_gen_id }} {
    max-width: 100%;
    height: auto;
  }

  .tabby-hero-image-placeholder-{{ ai_gen_id }} {
    max-width: {{ block.settings.image_max_width }}px;
    width: 100%;
    margin: 0 auto;
    display: inline-block;
  }

  .tabby-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    background-color: #f0f0f0;
    border-radius: 8px;
    aspect-ratio: 16/9;
  }

  @media screen and (min-width: 750px) {
    .tabby-badges-container-{{ ai_gen_id }} {
      flex-direction: row;
      justify-content: center;
      gap: {{ block.settings.badge_spacing_desktop }}px;
    }
  }
{% endstyle %}

<div class="tabby-info-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="tabby-logo-{{ ai_gen_id }}">
    {% if block.settings.tabby_logo %}
      <img 
        src="{{ block.settings.tabby_logo | image_url: width: 240 }}" 
        alt="Tabby Logo"
        width="{{ block.settings.tabby_logo.width }}"
        height="{{ block.settings.tabby_logo.height }}"
        loading="lazy"
      >
    {% else %}
      <div class="tabby-logo-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <h2 class="tabby-headline-{{ ai_gen_id }}">{{ block.settings.headline }}</h2>
  
  <div class="tabby-subheadline-{{ ai_gen_id }}">{{ block.settings.subheadline }}</div>
  
  <div class="tabby-badges-container-{{ ai_gen_id }}">
    <div class="tabby-badge-{{ ai_gen_id }}">{{ block.settings.badge_1_text }}</div>
    <div class="tabby-badge-{{ ai_gen_id }}">{{ block.settings.badge_2_text }}</div>
  </div>
  
  <div class="tabby-hero-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.hero_image %}
      <img 
        src="{{ block.settings.hero_image | image_url: width: block.settings.image_max_width }}" 
        alt="{{ block.settings.hero_image.alt | escape }}"
        width="{{ block.settings.hero_image.width }}"
        height="{{ block.settings.hero_image.height }}"
        loading="lazy"
        class="tabby-hero-image-{{ ai_gen_id }}"
        style="max-width: {{ block.settings.image_max_width }}px;"
      >
    {% else %}
      <div class="tabby-hero-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>
</div>

