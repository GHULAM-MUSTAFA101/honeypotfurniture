<lifestyle-showcase-{{ ai_gen_id }}
  class="ai-lifestyle-showcase-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-lifestyle-showcase__container-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign product_key = 'product_' | append: i
        assign title_key = 'title_' | append: i
        
        assign column_image = block.settings[image_key]
        assign column_product = block.settings[product_key]
        assign column_title = block.settings[title_key]
      %}
      
      <div class="ai-lifestyle-showcase__column-{{ ai_gen_id }}">
        {% if column_image %}
          <img
            src="{{ column_image | image_url: width: 800 }}"
            alt="{{ column_image.alt | escape }}"
            class="ai-lifestyle-showcase__background-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ column_image.width }}"
            height="{{ column_image.height }}"
          >
        {% else %}
          <div class="ai-lifestyle-showcase__placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}

        {% if column_product or column_title != blank %}
          <div class="ai-lifestyle-showcase__overlay-{{ ai_gen_id }}">
            <div class="ai-lifestyle-showcase__product-image-{{ ai_gen_id }}">
              {% if column_product and column_product.featured_image %}
                <img
                  src="{{ column_product.featured_image | image_url: width: 120 }}"
                  alt="{{ column_product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="120"
                  height="120"
                >
              {% else %}
                <div class="ai-lifestyle-showcase__product-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-lifestyle-showcase__content-{{ ai_gen_id }}">
              <h3 class="ai-lifestyle-showcase__title-{{ ai_gen_id }}">
                {% if column_title != blank %}
                  {{ column_title }}
                {% elsif column_product %}
                  {{ column_product.title }}
                {% else %}
                  Product Title
                {% endif %}
              </h3>
              
              <a
                href="{% if column_product %}{{ column_product.url }}{% else %}#{% endif %}"
                class="ai-lifestyle-showcase__button-{{ ai_gen_id }}"
              >
                {{ block.settings.button_text }}
              </a>
            </div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>

  <div class="ai-lifestyle-showcase__carousel-{{ ai_gen_id }}">
    <div class="ai-lifestyle-showcase__carousel-track-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign product_key = 'product_' | append: i
          assign title_key = 'title_' | append: i
          
          assign column_image = block.settings[image_key]
          assign column_product = block.settings[product_key]
          assign column_title = block.settings[title_key]
        %}
        
        <div class="ai-lifestyle-showcase__carousel-slide-{{ ai_gen_id }}">
          {% if column_image %}
            <img
              src="{{ column_image | image_url: width: 600 }}"
              alt="{{ column_image.alt | escape }}"
              class="ai-lifestyle-showcase__background-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ column_image.width }}"
