    <button class="ai-lifestyle-showcase__carousel-nav-{{ ai_gen_id }} ai-lifestyle-showcase__carousel-nav--prev-{{ ai_gen_id }}" aria-label="Previous slide">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
