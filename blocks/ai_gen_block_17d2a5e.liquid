        <button
          class="ai-lifestyle-showcase__carousel-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
          data-slide="{{ forloop.index0 }}"
          aria-label="Go to slide {{ forloop.index }}"
        ></button>
      {% endfor %}
    </div>
  </div>
</lifestyle-showcase-{{ ai_gen_id }}>

<script>
  (function() {
    class LifestyleShowcase{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 3;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.carousel = this.querySelector('.ai-lifestyle-showcase__carousel-{{ ai_gen_id }}');
        this.track = this.querySelector('.ai-lifestyle-showcase__carousel-track-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-lifestyle-showcase__carousel-nav--prev-{{ ai_gen_id }}');
        this.nextBtn = this.querySelector('.ai-lifestyle-showcase__carousel-nav--next-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-lifestyle-showcase__carousel-dot-{{ ai_gen_id }}');

        this.setupEventListeners();
        this.setupTouchEvents();
        
        {% if block.settings.enable_autoplay %}
          this.startAutoplay();
        {% endif %}
      }

      setupEventListeners() {
        this.prevBtn.addEventListener('click', () => this.goToPrevSlide());
        this.nextBtn.addEventListener('click', () => this.goToNextSlide());

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });
      }

      setupTouchEvents() {
        let startX = 0;
        let currentX = 0;
        let isDragging = false;

        this.carousel.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
          isDragging = true;
          this.pauseAutoplay();
        });

        this.carousel.addEventListener('touchmove', (e) => {
          if (!isDragging) return;
          currentX = e.touches[0].clientX;
        });

        this.carousel.addEventListener('touchend', () => {
          if (!isDragging) return;
          isDragging = false;

          const diff = startX - currentX;
          const threshold = 50;

          if (Math.abs(diff) > threshold) {
            if (diff > 0) {
              this.goToNextSlide();
            } else {
              this.goToPrevSlide();
            }
          }

          {% if block.settings.enable_autoplay %}
            this.startAutoplay();
          {% endif %}
        });
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateCarousel();
      }

      goToNextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
        this.updateCarousel();
      }

      goToPrevSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
        this.updateCarousel();
      }

      updateCarousel() {
        const translateX = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${translateX}%)`;

        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }

      startAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
        
        this.autoplayInterval = setInterval(() => {
          this.goToNextSlide();
        }, {{ block.settings.autoplay_duration | times: 1000 }});
      }

      pauseAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.pauseAutoplay();
      }
    }

    customElements.define('lifestyle-showcase-{{ ai_gen_id }}', LifestyleShowcase{{ ai_gen_id }});
  })();
</script>

