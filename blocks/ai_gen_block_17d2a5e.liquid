    width: 30px;
    height: 30px;
    opacity: 0.4;
  }

  .ai-lifestyle-showcase__content-{{ ai_gen_id }} {
    flex-grow: 1;
    min-width: 0;
  }

  .ai-lifestyle-showcase__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0 0 8px 0;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .ai-lifestyle-showcase__button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    padding: 8px 16px;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-lifestyle-showcase__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-lifestyle-showcase__carousel-{{ ai_gen_id }} {
    display: none;
    position: relative;
    overflow: hidden;
  }

  .ai-lifestyle-showcase__carousel-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease;
  }

  .ai-lifestyle-showcase__carousel-slide-{{ ai_gen_id }} {
    min-width: 100%;
    position: relative;
    height: {{ block.settings.mobile_image_height }}px;
  }

  .ai-lifestyle-showcase__carousel-nav-{{ ai_gen_id }} {
