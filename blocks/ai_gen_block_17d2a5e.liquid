    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-lifestyle-showcase__product-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

